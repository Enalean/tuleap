# EditorConfig is awesome: http://EditorConfig.org
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[Makefile]
indent_style = tab

[*.tab]
indent_style = tab

[{bower.json,package.json}]
indent_size = 2

[*.{yml,xml}]
indent_size = 2

[*.{md,mkd,snap}]
trim_trailing_whitespace = false
