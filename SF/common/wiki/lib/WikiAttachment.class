class WikiAttachmentIterator extends RecordIterator {
    var $gid;
 

    /**
     * @access public
     * @param int $id Project Id
     */
    function WikiAttachmentIterator($id=0) {
        $this->gid     = (int) $id;
        parent::RecordIterator('WikiAttachment');
    }

    function getList() {
        $this->sqlStatement = 
            '  SELECT * FROM wiki_attachment'
            .' WHERE group_id="'.$this->gid.'"';
        $this->dbinit();
    }
}

