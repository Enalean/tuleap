                        '<TD colspan=2><SPAN class=titlebar>'.$title.'</SPAN></TD></TR>'.
                        '<TR align=left>
                                <TD colspan=2>';
	        if ($echoout) {
        	        print $return;
	        } else {
                	return $return;
        	}
	}

