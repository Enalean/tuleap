# LJ Define the download.codex.xerox.com Web site
# that is used for file release download via HTTP
<VirtualHost 13.0.33.116>
 ServerName download.codex.xerox.com
 DocumentRoot /home/ftp/codex
 <Directory "/home/ftp/codex">
    Options Includes FollowSymLinks MultiViews
    FancyIndexing on
    AllowOverride FileInfo
    Order allow,deny
    Allow from all
 </Directory>
# ErrorLog logs/vhosts-download-error_log
