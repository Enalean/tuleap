<?xml version="1.0" encoding="UTF-8"?>

<!--Configuration file for JabbeX middleware-->
<conf>

	<!--Jabber server general parameters-->
	<server name="Openfire">
		<server_uri>{__SERVER_URI__}</server_uri>
		<server_port>{__SERVER_PORT__}</server_port>
	</server>

	<!--Jabber web admin ports-->
	<webadmin>
		<unsecure_port>{__UNSECURE_PORT__}</unsecure_port>
		<secure_port>{__SECURE_PORT__}</secure_port>
	</webadmin>

	
	<!--Authentication credentials-->
	<auth>
		<username>{__USERNAME__}</username>
		<user_pwd>{__USER_PWD__}</user_pwd>
		<lockmuc_pwd>{__LOCKMUC_PWD__}</lockmuc_pwd>
	</auth>
	
	<!--Helga bot related information-->
	<helga>
		<helga_bot>{__HELGA_BOT__}</helga_bot>
		<helga_service>{__HELGA_SERVICE__}</helga_service>
	</helga>
	
	<!--Defines whether the shared group management feature is active or not.
		Set this to 0 (false) only if using a Jabber server other than Openfire 
		to wihch no compliant GroupManagerInterface is available.-->
	<group_mng>
		<active>{__SHAREDGRP_ACTIVE__}</active>
	</group_mng>

</conf>