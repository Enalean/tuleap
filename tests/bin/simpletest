require(getenv('CODENDI_LOCAL_INC')?getenv('CODENDI_LOCAL_INC'):'/etc/codendi/conf/local.inc');

require_once dirname(__FILE__).'/../../plugins/tests/www/tests_common.php';

require_once(dirname(__FILE__).'/../../plugins/tests/include/simpletest/unit_tester.php');
require_once(dirname(__FILE__).'/../../plugins/tests/include/simpletest/mock_objects.php');
require_once(dirname(__FILE__).'/../../plugins/tests/include/simpletest/web_tester.php');
require_once(dirname(__FILE__).'/../../plugins/tests/include/simpletest/expectation.php');
require_once(dirname(__FILE__).'/../../plugins/tests/include/simpletest/collector.php');
require_once(dirname(__FILE__).'/../../plugins/tests/include/TestHelper.class.php');
require_once(dirname(__FILE__).'/../../plugins/tests/www/CodendiReporter.class.php');
require_once(dirname(__FILE__).'/../../plugins/tests/www/TuleapTestSuite.class.php');
require_once(dirname(__FILE__).'/../../plugins/tests/www/TuleapTestCase.class.php');


// Start
$options = getopt('x');
$format  = 'console';
if (isset($options['x'])) {
    $format = 'checkstyle';
    foreach ($_SERVER['argv'] as $key => $value) {
        if ($value == '-x') {
            unset($_SERVER['argv'][$key]);
        }
    }
}

if ($format == 'checkstyle') {
    $reporter = CodendiReporterFactory::reporter('junit_xml', true);
} else {
    $reporter = new ColorTextReporter();
}

// remove command name from argument list
array_shift($_SERVER['argv']);

$suite = new TuleapTestSuite($_SERVER['argv']);
$suite->run($reporter);

if ($format == 'checkstyle') {
    $reporter->writeXML('unit_tests_report.xml');
}

?>