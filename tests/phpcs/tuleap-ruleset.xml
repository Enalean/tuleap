<?xml version="1.0"?>
<ruleset
        name="Tuleap"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="../../src/vendor/squizlabs/php_codesniffer/phpcs.xsd"
>
    <description>Tuleap coding standard.</description>

    <rule ref="PSR12">
        <exclude name="Generic.Files.LineLength.TooLong"/>
        <exclude name="PSR1.Files.SideEffects.FoundWithSymbols"/>
        <!-- checked by SlevomatCodingStandard.Namespaces.UseSpacing -->
        <exclude name="PSR2.Namespaces.UseDeclaration.SpaceAfterLastUse"/>
        <!-- conflict and mostly checked by TuleapCodingStandard.Sniffs.Commenting.FileCopyrightSniff -->
        <exclude name="PSR12.Files.FileHeader.SpacingAfterTagBlock"/>
        <!-- currently has issue with our other rules -->
        <exclude name="PSR12.Files.FileHeader.SpacingAfterUseFunctionBlock"/>
        <exclude name="PSR12.Files.FileHeader.SpacingAfterUseBlock"/>
    </rule>
    <!-- Forbid superfluous whitespaces -->
    <rule ref="Squiz.WhiteSpace.SuperfluousWhitespace">
        <properties>
            <!-- turned on by PSR2 -> turning back off -->
            <property name="ignoreBlankLines" value="false"/>
        </properties>
    </rule>

    <rule ref="./non-psr-rules.xml"/>
</ruleset>
