<div id="admin-config-bot-add"
    class="modal hide fade"
    tabindex="-1"
    role="dialog"
    aria-labelledby="admin-config-bot-add-title"
    aria-hidden="true"
>

    <div class="modal-header">
        <a role="button" class="close" data-dismiss="modal">Ã—</a>
        <h3 id="configuration-add-bot-title" class="modal-configuration-bot-title">
            <i class="fa fa-plus"></i> {{ modal_add_title }}</h3>
    </div>

    <form method="POST" action="/plugins/botmattermost_agiledashboard/?action=add_bot">
        {{# csrf_token }}
            {{> csrf_token_input }}
        {{/ csrf_token }}
        <input type="hidden" name="group_id" value="{{ project_id }}" />

        <div class="modal-body">
            {{# has_bots }}
                <div class="form-group">
                    <label class="control-label col-sm-2" for="select_bot">{{ label_bot_list }}</label>
                    <div class="col-sm-8">
                        <select name="bot_id" class="form-control" id="select_bot">
                            {{# bots }}
                                <option {{# getAvatarUrl }}data-image="{{ getAvatarUrl }}"{{/ getAvatarUrl }}
                                        value="{{ getId }}">{{ getName }}</option>
                            {{/ bots}}
                        </select>
                        <p class="text-info"><i class="fa fa-info-circle"></i> {{ description }}</p>
                        <p class="text-info">{{ description_create_bot }}</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2" for="bot-mattermost-channels-names">{{ label_channels_handles }}</label>
                    <div class="col-sm-8">
                        <input id="add_channels"
                               class="input_channels"
                               name="channels"
                               placeholder="{{ input_channels_handles }}"
                               hidden
                               multiple
                        />
                        <p class="text-info"><i class="fa fa-info-circle"></i> {{{ purified_info_channels_handles }}}</p>
                    </div>
                </div>
                <div id="field-bot-mattermost-agiledashboard-send-time" class="form-group">
                    <label class="control-label" for="bot-mattermost-agiledashboard-send-time">{{ label_send_time }}</label>
                    <div id="bot-mattermost-agiledashboard-send-time" class="input-append form-control" >
                        <span class="bot-mattermost-agiledashboard-field-time">
                            <input required
                                   name="send_time"
                                   class="input-small form-control"
                                   data-format="hh:mm"
                                   type="text"
                                {{# bot_assigned }}
                                   value="{{ send_time }}"
                                {{/ bot_assigned }}
                            />
                            <span class="add-on">
                                <i class="fa fa-clock-o"></i>
                            </span>
                        </span>
                    </div>
                    <p class="text-warning"><i class="fa fa-exclamation-triangle"></i> {{ alert_time_warning }}</p>
                </div>
            {{/ has_bots }}
            {{^ has_bots }}
                <p>{{ empty_bot_list }}</p>
            {{/ has_bots }}
        </div>

        <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true">{{ button_close }}</button>
            <button type="submit" class="btn btn-primary"><i class="fa fa-plus"></i> {{ button_confirm }}</button>
        </div>
    </form>
</div>
