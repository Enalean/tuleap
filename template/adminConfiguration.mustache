<div id="agiledashboard-notification-mattermost-section">
    <h3><i class="fa fa-envelope"></i> {{ title }}</h3>
    {{^ bot_assigned }}
        <div class="agiledashboard-notification-mattermost-configuration-empty-state">
            <p>{{ any_configured_notification }}</p>
            {{# has_bots }}
                <p class="agiledashboard-notification-mattermost-configuration-description">{{ any_configured_notification_tips }}</p>
                <button class="btn btn-primary" data-toggle="modal" href="#admin-config-bot-add">
                    <i class="fa fa-plus"></i> {{ button_config }}
                </button>
            {{/ has_bots}}
            {{^ has_bots }}
                <p>{{ empty_bot_list }}</p>
            {{/ has_bots }}
        </div>
        {{> modal-add-bot }}
    {{/ bot_assigned }}
    {{# bot_assigned }}
        <section class="panel">
            <div class="panel-header">
                <p class="panel-name">
                    {{# avatar }}<img class="bot-avatar img-circle" src="{{ avatar }}">{{/ avatar }}
                    {{ name }}
                </p>
            </div>
            <section class="panel-container">
                <section class="panel-section">
                    <div>
                        <p class="bot-assigned-label">{{ label_send_time }}</p>
                        <p>{{ send_time }}</p>
                    </div>
                    <div>
                        <p class="bot-assigned-label">{{ label_channels_handles }}</p>
                        {{# channels }}
                            <p>{{ channels }}</p>
                        {{/ channels }}
                        {{^ channels }}
                            <div class="agiledashboard-notification-mattermost-configuration-empty-state">
                                <p class="agiledashboard-notification-mattermost-configuration-description">{{ empty_channel_list }}</p>
                            </div>
                        {{/ channels }}
                    </div>
                </section>
                <section class="panel-section panel-section-actions button-group">
                    <button class="btn btn-primary" data-toggle="modal" href="#admin-config-bot-edit-{{ id }}">
                        <i class="fa fa-pencil-square-o"></i> {{ button_edit }}
                    </button>
                    {{> modal-edit-bot }}
                    <button class="btn btn-danger" data-toggle="modal" href="#admin-config-bot-delete-{{ id }}">
                        <i class="fa fa-trash-o"></i> {{ button_delete }}
                    </button>
                </section>
                {{> modal-delete-bot }}
            </section>
        </section>
    {{/ bot_assigned }}
</div>
