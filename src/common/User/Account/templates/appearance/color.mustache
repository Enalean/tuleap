<div class="tlp-form-element">
    <label class="tlp-label">{{# gettext }}Theme color{{/ gettext }}</label>
    <select name="color"
            id="user-preferences-color-selector"
            data-test="user-preferences-color-selector"
            class="tlp-select tlp-select-adjusted"
            data-colors="{{ json_encoded_colors }}"
            style="width: 200px"
    >
    </select>
</div>
{{# allow_favicon_variant }}
    <div class="tlp-form-element">
        <label class="tlp-label tlp-checkbox">
            <input type="checkbox"
                   name="favicon-variant"
                   value="1"
                   {{# use_favicon_variant}}checked{{/ use_favicon_variant }}
            >
            {{# gettext }}Use theme color for favicon{{/gettext}}
        </label>
    </div>
{{/ allow_favicon_variant }}
