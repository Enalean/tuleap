                      </attribute>
                    </optional>
                    <optional>
                      <attribute name="as_of_date">
                        <data type="string"/>
                      </attribute>
                    </optional>
                    <optional>
                      <attribute name="start">
                        <data type="IDREF"/>
                      </attribute>
                    </optional>
                    <optional>
                      <attribute name="due">
                        <data type="IDREF"/>
                      </attribute>
                    </optional>
                    <optional>
                      <attribute name="finish">
                        <data type="IDREF"/>
                      </attribute>
                    </optional>
                    <optional>
                      <attribute name="righttext">
                        <data type="IDREF"/>
                      </attribute>
                    </optional>
                    <optional>
                      <attribute name="summary">
                        <data type="IDREF"/>
                      </attribute>
                    </optional>
                    <optional>
