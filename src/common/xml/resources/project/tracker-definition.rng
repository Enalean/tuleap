                <value>tracker</value>
                <value>field</value>
              </choice>
            </attribute>
            <attribute name="ugroup">
              <data type="string"/>
            </attribute>
            <attribute name="type">
              <data type="string"/>
            </attribute>
          </element>
        </zeroOrMore>
      </element>
    </optional>
    <optional>
      <element name="artifacts">
        <ref name="artifacts"/>
      </element>
    </optional>
    <optional>
      <element name="timetracking">
        <ref name="timetracking"/>
      </element>
    </optional>
  </define>
  <define name="formElementsContent">
    <optional>
      <element name="formElements">
        <zeroOrMore>
          <element name="formElement">
            <ref name="formElementContent"/>
          </element>
        </zeroOrMore>
      </element>
    </optional>
  </define>
  <define name="formElementContent">
    <!-- ID is internal to the XML file -->
    <attribute name="ID">
      <data type="ID"/>
    </attribute>
    <attribute name="rank">
      <data type="long"/>
    </attribute>
    <optional>
      <!-- id is the initial id of the exported field -->
      <attribute name="id">
        <data type="long"/>
      </attribute>
    </optional>
    <optional>
      <attribute name="tracker_id">
        <data type="long"/>
      </attribute>
    </optional>
    <optional>
      <attribute name="parent_id">
        <data type="long"/>
      </attribute>
    </optional>
    <optional>
      <!-- these attributes should be optional and have  default values -->
      <attribute name="use_it">
        <choice>
          <value>0</value>
          <value>1</value>
        </choice>
      </attribute>
    </optional>
    <optional>
      <!-- default is true -->
      <attribute name="scope">
        <choice>
          <value>S</value>
          <value>P</value>
        </choice>
      </attribute>
    </optional>
    <optional>
      <!-- default is 'P' -->
      <attribute name="required">
        <choice>
          <value>0</value>
          <value>1</value>
        </choice>
      </attribute>
    </optional>
    <optional>
      <!-- default is false -->
      <attribute name="notifications">
        <choice>
          <value>0</value>
          <value>1</value>
        </choice>
      </attribute>
    </optional>
    <!-- default is false -->
    <element name="name">
      <ref name="lowercase_alphanum_non_empty_string"/>
    </element>
    <element name="label">
      <data type="string"/>
    </element>
    <optional>
      <element name="description">
        <data type="string"/>
      </element>
    </optional>
    <optional>
      <element name="properties">
        <optional>
          <attribute name="maxchars">
            <data type="long"/>
          </attribute>
        </optional>
        <optional>
          <attribute name="size">
            <data type="long"/>
          </attribute>
        </optional>
        <optional>
          <attribute name="rows">
            <data type="long"/>
          </attribute>
        </optional>
        <optional>
          <attribute name="cols">
            <data type="long"/>
          </attribute>
        </optional>
        <optional>
          <attribute name="static_value">
            <data type="string"/>
          </attribute>
        </optional>
        <optional>
          <attribute name="default_value">
            <data type="string"/>
          </attribute>
        </optional>
        <optional>
          <attribute name="hint">
            <data type="string"/>
          </attribute>
        </optional>
        <optional>
          <attribute name="target_field_name">
            <data type="string"/>
          </attribute>
        </optional>
        <optional>
          <attribute name="fast_compute">
            <choice>
              <value>0</value>
              <value>1</value>
            </choice>
          </attribute>
        </optional>
        <optional>
          <attribute name="use_capacity">
            <choice>
              <value>0</value>
              <value>1</value>
            </choice>
          </attribute>
        </optional>
        <optional>
          <attribute name="include_weekends">
            <choice>
              <value>0</value>
              <value>1</value>
            </choice>
          </attribute>
        </optional>
        <optional>
          <attribute name="display_time">
            <choice>
              <value>0</value>
              <value>1</value>
            </choice>
          </attribute>
        </optional>
        <optional>
          <attribute name="use_cache">
            <choice>
              <value>0</value>
              <value>1</value>
            </choice>
          </attribute>
        </optional>
      </element>
    </optional>
    <choice>
      <attribute name="type">
        <data type="string"/>
      </attribute>
      <group>
        <attribute name="type">
          <choice>
            <value>fieldset</value>
            <value>column</value>
          </choice>
        </attribute>
        <optional>
          <ref name="formElementsContent"/>
        </optional>
      </group>
      <group>
        <attribute name="type">
          <choice>
            <value>sb</value>
            <value>msb</value>
            <value>tbl</value>
            <value>cb</value>
            <value>rb</value>
          </choice>
        </attribute>
        <ref name="bindContent"/>
      </group>
    </choice>
  </define>
  <define name="bindContent">
    <element name="bind">
      <choice>
        <group>
          <attribute name="type">
            <value>static</value>
          </attribute>
          <attribute name="is_rank_alpha">
            <choice>
              <value>0</value>
              <value>1</value>
            </choice>
          </attribute>
        </group>
        <attribute name="type">
          <value>users</value>
        </attribute>
        <attribute name="type">
          <value>ugroups</value>
        </attribute>
      </choice>
      <optional>
        <element name="items">
          <zeroOrMore>
            <element name="item">
              <optional>
                <attribute name="ID">
                  <data type="ID"/>
                </attribute>
              </optional>
              <attribute name="label">
                <ref name="non_empty_string"/>
              </attribute>
              <optional>
                <attribute name="is_hidden">
                  <choice>
                    <value>0</value>
                    <value>1</value>
                  </choice>
                </attribute>
              </optional>
              <optional>
                <element name="description">
                  <data type="string"/>
                </element>
              </optional>
            </element>
          </zeroOrMore>
        </element>
      </optional>
      <optional>
        <element name="decorators">
          <zeroOrMore>
            <element name="decorator">
              <optional>
                <attribute name="REF">
                  <data type="IDREF"/>
                </attribute>
              </optional>
              <choice>
                <ref name="decorator_legacy_color"/>
                <attribute name="tlp_color_name">
                  <data type="string"/>
                </attribute>
              </choice>
            </element>
          </zeroOrMore>
        </element>
      </optional>
      <optional>
        <element name="default_values">
          <zeroOrMore>
            <element name="value">
              <choice>
                <attribute name="REF">
                  <data type="IDREF"/>
                </attribute>
                <ref name="tracker_user_content"/>
              </choice>
            </element>
          </zeroOrMore>
        </element>
      </optional>
    </element>
  </define>
  <define name="decorator_legacy_color">
    <attribute name="r">
      <data type="long"/>
    </attribute>
    <attribute name="g">
      <data type="long"/>
    </attribute>
    <attribute name="b">
      <data type="long"/>
    </attribute>
  </define>
  <define name="listRuleContent">
    <element name="source_field">
      <attribute name="REF">
        <data type="IDREF"/>
      </attribute>
    </element>
    <element name="target_field">
      <attribute name="REF">
        <data type="IDREF"/>
      </attribute>
    </element>
    <element name="source_value">
      <choice>
        <attribute name="REF">
          <data type="IDREF"/>
        </attribute>
        <attribute name="is_none">
          <value>1</value>
        </attribute>
      </choice>
    </element>
    <element name="target_value">
      <choice>
        <attribute name="REF">
          <data type="IDREF"/>
        </attribute>
        <attribute name="is_none">
          <value>1</value>
        </attribute>
      </choice>
    </element>
  </define>
  <define name="dateRuleContent">
    <element name="source_field">
