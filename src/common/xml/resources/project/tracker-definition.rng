    <ref name="formElementsContent"/>
    <optional>
      <element name="semantics">
        <zeroOrMore>
          <element name="semantic">
            <ref name="semanticContent"/>
          </element>
        </zeroOrMore>
      </element>
    </optional>
    <optional>
      <element name="dependencies">
        <zeroOrMore>
          <element name="rule">
            <ref name="listRuleContent"/>
          </element>
        </zeroOrMore>
      </element>
    </optional>
    <optional>
      <element name="rules">
        <optional>
          <element name="date_rules">
            <zeroOrMore>
              <element name="rule">
                <ref name="dateRuleContent"/>
              </element>
            </zeroOrMore>
          </element>
        </optional>
        <optional>
          <element name="list_rules">
            <zeroOrMore>
              <element name="rule">
                <ref name="listRuleContent"/>
              </element>
            </zeroOrMore>
          </element>
        </optional>
