                  </attribute>
                </optional>
              </element>
            </zeroOrMore>
          </element>
        </optional>
        <optional>
          <element name="sort">
            <zeroOrMore>
              <element name="field">
                <attribute name="REF">
                  <data type="IDREF"/>
                </attribute>
              </element>
            </zeroOrMore>
          </element>
        </optional>
      </group>
      <group>
        <attribute name="type">
          <value>plugin_graphontrackersv5</value>
        </attribute>
        <optional>
          <element name="charts">
            <zeroOrMore>
              <element name="chart">
                <attribute name="width">
                  <data type="long"/>
                </attribute>
                <attribute name="height">
                  <data type="long"/>
                </attribute>
                <attribute name="rank">
                  <data type="long"/>
                </attribute>
                <element name="title">
                  <data type="string"/>
                </element>
                <optional>
