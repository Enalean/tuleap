  <define name="non_empty_string">
    <data type="string">
      <param name="minLength">1</param>
      <param name="pattern">(\s*\S+\s*)+</param>
    </data>
  </define>
  <define name="lowercase_alphanum_non_empty_string">
    <data type="string">
      <param name="minLength">1</param>
      <param name="pattern">\s*[a-z0-9_\-]+\s*</param>
    </data>
  </define>
</grammar>
