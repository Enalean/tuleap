    </optional>
    <element name="criterias">
      <zeroOrMore>
        <element name="criteria">
          <ref name="criteriaContent"/>
        </element>
      </zeroOrMore>
    </element>
    <element name="renderers">
      <zeroOrMore>
        <element name="renderer">
          <ref name="rendererContent"/>
        </element>
      </zeroOrMore>
    </element>
  </define>
  <define name="criteriaContent">
    <attribute name="rank">
      <data type="long"/>
    </attribute>
    <optional>
      <!-- these attributes should be optional and have  default values -->
      <attribute name="is_advanced">
        <choice>
          <value>0</value>
          <value>1</value>
        </choice>
      </attribute>
    </optional>
    <optional>
      <!--
        default is false
        these ids are initial ids of the exported report
      -->
      <attribute name="id">
        <data type="long"/>
      </attribute>
    </optional>
    <optional>
      <attribute name="report">
        <data type="long"/>
      </attribute>
    </optional>
    <element name="field">
      <attribute name="REF">
        <data type="IDREF"/>
      </attribute>
    </element>
    <optional>
      <element name="criteria_value">
        <ref name="reportValueContent"/>
      </element>
    </optional>
  </define>
  <define name="reportValueContent">
    <choice>
      <group>
        <attribute name="type">
          <value>text</value>
        </attribute>
        <data type="string"/>
      </group>
      <group>
        <attribute name="type">
          <value>list</value>
        </attribute>
        <optional>
          <element name="none_value">
            <empty/>
          </element>
        </optional>
        <zeroOrMore>
          <element name="selected_value">
            <attribute name="REF">
              <data type="IDREF"/>
            </attribute>
          </element>
        </zeroOrMore>
      </group>
    </choice>
  </define>
