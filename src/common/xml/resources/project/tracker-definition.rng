                      <value>bar</value>
                    </attribute>
                    <optional>
                      <attribute name="base">
                        <data type="IDREF"/>
                      </attribute>
                    </optional>
                    <optional>
                      <attribute name="group">
                        <data type="IDREF"/>
                      </attribute>
                    </optional>
                  </group>
                  <group>
                    <attribute name="type">
                      <value>burnup</value>
                    </attribute>
                    <optional>
                      <attribute name="start_date">
