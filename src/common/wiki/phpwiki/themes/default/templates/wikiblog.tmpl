$CDATE = $Theme->formatDateTime($BLOG_CTIME);

$buttons = $modified = '';

if ($user->isAdmin() or $user->getId() == $BLOG_CREATOR) {
    $buttons = HTML::small(array('class' => 'floatleft'),
                           Button('edit', false, $page));
    if ($user->isAdmin())
      $buttons->pushContent(Button('remove', false, $page));
