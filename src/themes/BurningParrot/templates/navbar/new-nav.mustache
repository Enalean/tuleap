{{# new_dropdown }}
    {{# has_sections }}
        <nav>
            <button id="nav-dropdown-new" class="tlp-button-secondary tlp-button-outline" data-shortcut-create data-test="new-button">
                <i class="tlp-button-icon fa-solid fa-plus nav-dropdown-new-icon" aria-hidden="true"></i>
                <span class="header-button-label">{{# gettext }}New{{/ gettext }}</span>
            </button>

            <div id="nav-dropdown-new-content" class="tlp-popover nav-dropdown">
                <div class="tlp-popover-arrow"></div>
                <div class="tlp-popover-header"></div>
                <div class="tlp-popover-body">
                    {{# sections }}
                        <div class="tlp-dropdown-menu-title nav-dropdown-title">{{ label }}</div>
                        {{# links }}
                            <a href="{{ url }}"
                               class="tlp-dropdown-menu-item nav-dropdown-item"
                               data-shortcut-create-option {{# data_attributes }}data-{{ name }}="{{ value }}"{{/ data_attributes }}
                               data-test="create-new-item"
                            >
                                <i class="fa fa-fw {{ icon }} tlp-dropdown-menu-item-icon" aria-hidden="true"></i>
                                {{ label }}
                            </a>
                        {{/ links }}
                    {{/ sections }}
                </div>
            </div>
        </nav>
    {{/ has_sections }}
{{/ new_dropdown }}
