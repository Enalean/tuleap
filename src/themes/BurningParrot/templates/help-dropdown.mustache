{{# help_dropdown }}
    <div class="tlp-dropdown help-dropdown">
        <button type="button" aria-label="{{# gettext }}Help{{/ gettext }}" id="help" data-test="help-button"
                class="tlp-button-primary tlp-button-outline {{^ has_release_note_been_seen }} new-release-note-available {{/ has_release_note_been_seen }}">
            <svg class="svg-question-mark" width="12" height="20" viewBox="0 0 12 20" fill="none"
                 xmlns="http://www.w3.org/2000/svg">
                <path
                    d="M4.58984 12.7266H7.30859V12.0469C7.30859 10.875 7.74219 10.2656 9.27734 9.375C10.8711 8.42578 11.7617 7.17188 11.7617 5.39062V5.36719C11.7617 2.80078 9.61719 0.949219 6.40625 0.949219C2.92578 0.949219 1.01562 2.96484 0.933594 5.70703V5.73047L3.66406 5.71875L3.6875 5.70703C3.76953 4.26562 4.74219 3.33984 6.25391 3.33984C7.73047 3.33984 8.71484 4.24219 8.71484 5.47266V5.49609C8.71484 6.64453 8.22266 7.27734 6.76953 8.15625C5.15234 9.10547 4.47266 10.1602 4.57812 11.8945L4.58984 12.7266ZM6.07812 18.293C7.27344 18.293 8.02344 17.5664 8.02344 16.4531C8.02344 15.3281 7.27344 14.6016 6.07812 14.6016C4.90625 14.6016 4.13281 15.3281 4.13281 16.4531C4.13281 17.5664 4.90625 18.293 6.07812 18.293Z"
                    fill="#E3E5ED"/>
            </svg>
            {{^ has_release_note_been_seen }}
                <i class="fas fa-star new-release-note-available-icon" aria-hidden="true"></i>
            {{/ has_release_note_been_seen }}
        </button>
        <div class="tlp-dropdown-menu tlp-dropdown-menu-top" role="menu">
            {{# platform_links }}
                <a href="{{ link }}" class="help-dropdown-link dropdown-item tlp-dropdown-menu-item" role="menuitem" data-test="{{ data_test }}">
                    <i class="tlp-dropdown-menu-item-icon fa fa-fw {{ icon }}"></i>{{ title }}
                </a>
            {{/ platform_links }}
            {{# release_note_link }}
                <span class="tlp-dropdown-menu-separator" role="separator"></span>

                <a href="{{ link }}" class="help-dropdown-link dropdown-item tlp-dropdown-menu-item {{^ has_release_note_been_seen }}help-dropdown-link-highlight{{/ has_release_note_been_seen }}"
                   role="menuitem">
                    <i class="tlp-dropdown-menu-item-icon fa fa-fw {{ icon }}"></i>{{ title }}
                </a>
            {{/ release_note_link }}
            {{# has_site_content_links }}
                <span class="tlp-dropdown-menu-separator" role="separator"></span>
                {{# site_content_links }}
                    <a href="{{ link }}"
                       class="help-dropdown-link dropdown-item tlp-dropdown-menu-item"
                       role="menuitem"
                    >
                        {{ title }}
                    </a>
                {{/ site_content_links }}
            {{/ has_site_content_links }}
            <span class="tlp-dropdown-menu-separator" role="separator"></span>
            <span class="tlp-dropdown-menu-item-alt tlp-text-muted">
                {{# explorer_url }}
                    <a href="{{ explorer_url }}" role="menuitem">{{# gettext }} API {{/ gettext }}</a>
                {{/ explorer_url }}
                <a href="/tos/tos.php" role="menuitem">{{# gettext }} Terms {{/ gettext }}</a>
                <a href="/contact.php" role="menuitem">{{# gettext }} Contact {{/ gettext }}</a>
                <a href="#" role="menuitem" id="help-dropdomn-shortcuts">{{# gettext }}Shortcuts{{/ gettext }}</a>
            </span>
        </div>
    </div>
{{/ help_dropdown }}

<div id="help-modal-shortcuts"
     class="tlp-modal"
     role="dialog"
     aria-labelledby="help-modal-shortcuts-label"
>
    <div class="tlp-modal-header">
        <h1 class="tlp-modal-title" id="help-modal-shortcuts-label">{{# gettext }}Keyboard shortcuts{{/ gettext }}</h1>
        <button class="tlp-modal-close" type="button" data-dismiss="modal" aria-label="{{# gettext }}Close{{/ gettext }}">
            <i class="fas fa-times tlp-modal-close-icon" aria-hidden="true"></i>
        </button>
    </div>
    <div data-shortcuts-modal-body class="tlp-modal-body help-modal-shortcuts-body">
        {{> shortcuts }}
    </div>
    <div class="tlp-modal-footer">
        <button type="button" class="tlp-button-primary tlp-button-outline tlp-modal-action" data-dismiss="modal">
            {{# gettext }}Close{{/ gettext }}
        </button>
    </div>
</div>
