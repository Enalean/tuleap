{{# new_dropdown }}
    {{# has_sections }}
        <div class="new-nav">
            <button type="button" id="nav-dropdown-new" class="btn" data-shortcut-create data-test="create-new">
                <i class="fa-solid fa-plus btn-icon" aria-hidden="true"></i>
                <span class="header-button-label">{{# gettext }}New{{/gettext}}</span>
            </button>
            <div id="nav-dropdown-new-content" class="tlp-popover nav-dropdown">
                <div class="tlp-popover-arrow"></div>
                <div class="tlp-popover-header"></div>
                <div class="tlp-popover-body">
                    {{# sections }}
                        <div class="nav-dropdown-item-divider"></div>
                        <div class="nav-dropdown-item-title">{{ label }}</div>
                        {{# links }}
                            <a href="{{ url }}" class="nav-dropdown-item" data-shortcut-create-option data-test="create-new-item">
                                <i class="fa fa-fw {{ icon }} nav-dropdown-item-icon" aria-hidden="true"></i>
                                {{ label }}
                            </a>
                        {{/ links }}
                    {{/ sections }}
                </div>
            </div>
        </div>
    {{/ has_sections }}
{{/ new_dropdown }}
