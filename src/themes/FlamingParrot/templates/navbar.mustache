<header class="{{# should_logo_be_displayed }}full-width{{/ should_logo_be_displayed }}">
    <div class="header-container">
        {{# should_logo_be_displayed }}
            {{> logo }}
        {{/ should_logo_be_displayed }}

        <div class="header-container-spacer"></div>

        {{# has_platform_banner }}
            {{# user_id }}
                <button
                    type="button"
                    id="platform-banner-bullhorn"
                    class="btn
                        {{# platform_banner_is_standard }}btn-info{{/ platform_banner_is_standard }}
                        {{# platform_banner_is_warning }}btn-warning{{/ platform_banner_is_warning }}
                        {{# platform_banner_is_critical }}btn-danger{{/ platform_banner_is_critical }}
                        platform-banner-navbar-button
                        {{# platform_banner_is_visible }}platform-banner-hidden{{/ platform_banner_is_visible }}
                    "
                    aria-labelledby="platform-banner-message"
                >
                    <i class="fas fa-bullhorn" aria-hidden="true"></i>
                </button>
            {{/ user_id }}
        {{/ has_platform_banner }}

        {{# is_super_user }}
            <a class="btn admin-link" href="/admin/" aria-label="{{# gettext }}Administration{{/ gettext }}">
                <i class="fa fa-cogs" aria-hidden="true"></i>
            </a>
        {{/ is_super_user }}

        {{> navbar-new-nav }}

        {{# switch_to }}
            <button type="button" data-toggle="modal" id="switch-to-button" data-target="#switch-to-modal" class="btn">
                <i class="fa fa-random btn-icon" aria-hidden="true"></i>
                {{# gettext }}Projects...{{/ gettext }}
            </button>
        {{/ switch_to }}

        {{# invite_buddies_presenter }}
            {{# can_buddies_be_invited }}
                <button
                    type="button"
                    class="btn"
                    data-toggle="modal"
                    data-target="#invite-buddies-modal"
                    {{# is_limit_reached }}
                    disabled
                    title="{{# gettext }} You can no longer invite people to use %s you have reached the limit of %s invitations by day.| {{ instance_name }} | {{ max_limit_by_day }} {{/ gettext }}"
                    {{/ is_limit_reached }}
                >
                    <i class="fa fa-paper-plane btn-icon" aria-hidden="true"></i>
                    {{# gettext }}Invite{{/ gettext }}
                </button>
            {{/ can_buddies_be_invited }}
        {{/ invite_buddies_presenter }}

        {{> navbar-user-nav }}
    </div>
</header>
