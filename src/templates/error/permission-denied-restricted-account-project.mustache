<section class="empty-state-page">
    <div class="empty-state-illustration">
        {{> svg-locked-project }}
    </div>

    <h1 class="empty-state-title" data-test="error-user-is-restricted">
        {{# gettext }}You have a restricted user account{{/ gettext }}
    </h1>
    <p class="empty-state-text">
        {{# gettext }}You may only have access to projects you are member of.{{/ gettext }}
    </p>

    <div class="empty-state-action">
        <button type="button"
                class="tlp-button-primary"
                data-target="join-project-modal"
                id="button-ask-to-join"
                data-test="button-ask-to-join-for-restricted"
                data-modal-id="join-project-modal"
        >
            <i class="fas fa-long-arrow-alt-right tlp-button-icon"></i> {{# gettext }}Ask to join this project{{/ gettext }}
        </button>

        <a class="tlp-button-primary tlp-button-outline error-back-to-homepage" href="/my/">
            <i class="fa fa-reply tlp-button-icon"></i> {{# gettext }}Go to my home page{{/ gettext }}
        </a>
    </div>
</section>

{{> join-project }}
