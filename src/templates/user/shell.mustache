<div id="account-shell">
    <h3 class="account-title">
        <i class="fa fa-terminal"></i> {{ shell_account_title }}
        <a href="javascript:help_window('/doc/{{ user_language }}/user-guide/citizen.html#account-maintenance')">
            <i class="fa fa-question-circle help-button"></i>
        </a>
    </h3>

    <p>
        <span class="user-info-label">{{ ssh_keys_count_label }}</span> {{ ssh_keys_count }}
    </p>

    {{# has_ssh_key }}
        <form action="editsshkeys.php" method="post">
    {{/ has_ssh_key }}

    <table class="table ssh-keys-table">
        <thead>
            <tr>
                <th></th>
                <th>{{ ssh_keys_label }}</th>
            </tr>
        </thead>
        {{# has_ssh_key }}
            <tbody>
                {{# ssh_keys_list }}
                <tr>
                    <td>
                        <input type="checkbox" name="ssh_key_selected[]" value="{{ ssh_key_number }}"/>
                    </td>
                    <td data-ssh_key_value="{{ ssh_key_value }}">
                        {{ ssh_key_ellipsis_value }}
                    </td>
                </tr>
                {{/ ssh_keys_list }}
            </tbody>
        {{/ has_ssh_key }}
        {{^ has_ssh_key }}
            <tbody>
                <tr>
                    <td class="table-cell-empty" colspan="2">{{ ssh_keys_no_key }}</td>
                </tr>
            </tbody>
        {{/ has_ssh_key }}
    </table>

    <div id="user-ssh-keys-action">
        <a class="btn btn-primary" href="#ssh-keys-modal" data-toggle="modal">
            <i class="fa fa-plus"> </i> {{ add_ssh_key_button }}
        </a>

        {{# has_ssh_key }}
            <button type="submit"
                    name="delete-keys"
                    class="btn btn-danger"
                    id="button-delete-keys"
                    disabled
            >
                <i class="fa fa-trash-o"> </i> {{ delete_ssh_key_button }}
            </button>
        {{/ has_ssh_key }}
    </div>

    {{# has_ssh_key }}
        {{{ csrf_input_html }}}
        </form>
    {{/ has_ssh_key }}

    {{> ssh-keys-modal }}

    {{{ ssh_keys_extra_html }}}
</div>
