{{^ condensed }}
    <p id="cross_references_legend">{{ message_legend }}</p>
{{/ condensed }}

{{# cross_refs_by_nature }}
    <div class="{{ classes }}">
        {{^ condensed }}
            <p><b> {{ nature_label }} </b></p>
        {{/ condensed }}
        <ul class="cross_reference_list">
            {{# cross_reference_link_list }}
                <li class="{{ classes_key }}">
                    <img
                        src="{{ icon_path }}"
                        alt="{{ icon_message }}"
                        align="top-left"
                        hspace="5"
                        title="{{ icon_message }}"
                        />
                    {{# cross_ref_link_collection }}
                        <span id="{{ id }}" class="link_to_ref">
                            {{# with_links }}
                                <a class="cross-reference"
                                   title="{{ nature_label }}"
                                   href="{{ url }}">{{ ref }}</a>
                            {{/ with_links }}
                            {{^ with_links }}
                                {{ ref }}
                            {{/ with_links }}
                            {{# display_params }}
                                <a class="delete_ref"
                                   data-href="/reference/rmreference.php{{ params }}"
                                   onClick="return delete_ref('{{ id }}', '{{message_to_delete}}');">
                                    <img
                                        src="/themes/FlamingParrot/images/ic/cross.png"
                                        alt="{{ icon_to_delete_message }}"
                                        title="{{ icon_to_delete_message }}"
                                    />
                                </a>
                            {{/ display_params }}
                            {{# display_comma }}
                                ,
                            {{/ display_comma }}
                        </span>
                    {{/ cross_ref_link_collection }}
                </li>
            {{/ cross_reference_link_list }}
        </ul>
    </div>
{{/ cross_refs_by_nature }}
