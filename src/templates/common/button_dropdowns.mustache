<div class="btn-group button_dropdowns" id="{{ id }}">
    <a class="btn {{# class_names }}{{ . }} {{/ class_names }}dropdown-toggle" data-toggle="dropdown" href="#">
        <i class="{{ icon }}"></i> {{ label }}
        <span class="caret"></span>
    </a>
    <ul class="dropdown-menu pull-right">
        {{# options }}
            {{# divider }}
            <li class="divider"></li>
            {{/ divider }}

            {{# title }}
            <li class="nav-header">{{ label }}</li>
            {{/ title }}

            {{# submenu }}
            <li class="dropdown-submenu pull-left glued">
                <a href="#" id="{{ id }}">{{ label }}</a>
                <ul class="dropdown-menu">
                    {{# sub_options }}
                        {{# divider }}
                        <li class="divider"></li>
                        {{/ divider }}

                        {{# simple }}
                        <li {{# li_parameters }} {{ parameter }}="{{ value }}"{{/ li_parameters }}>
                            <a href="{{ url }}" id="{{ id }}" data-toggle="{{ data_toggle }}">{{# selected }}<i class="fa fa-check"></i>{{/ selected }} {{ label }}</a>
                        </li>
                        {{/ simple }}
                    {{/ sub_options }}
                </ul>
            </li>
            {{/ submenu }}

            {{# simple }}
            <li {{# li_parameters }} {{ parameter }}="{{ value }}"{{/ li_parameters }}>
                <a href="{{ url }}" id="{{ id }}" data-toggle="{{ data_toggle }}">{{# selected }}<i class="fa fa-check"></i>{{/ selected }} {{ label }}</a>
            </li>
            {{/ simple }}
        {{/ options }}
    </ul>
</div>
