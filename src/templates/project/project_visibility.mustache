<div class="tlp-form-element">
    <label class="tlp-label" for="project_visibility">
        {{ project_visibility_label }}
        <i class="fa fa-asterisk"></i>
    </label>
    <select class="tlp-select" name="project_visibility" id="project_visibility" data-test="project_visibility">
        {{# options }}
            <option value="{{ value }}"
                {{# disabled }} disabled {{/ disabled }}
                {{# title }} title="{{ . }}" {{/ title }}
                {{ selected }}
            >{{ label }}</option>
        {{/ options }}
    </select>
</div>
<br>
{{# platform_allows_restricted }}
    <p class="tlp-alert-warning">
        {{{ restricted_warning_message }}}
    </p>
{{/ platform_allows_restricted }}
{{^ platform_allows_restricted }}
    <p class="tlp-alert-warning">
        {{{ general_warning_message }}}
    </p>
{{/ platform_allows_restricted }}
<div id="term-of-service-usage"
    class="tlp-form-element">
    <label class="tlp-label tlp-checkbox">
        <input type="checkbox"
               name="term_of_service"
               id="term-of-service"
               data-test="term_of_service"
               oninvalid='this.setCustomValidity("{{ accept_tos_message }}")'
               onclick="this.setCustomValidity('')"
        />
         {{{ purified_term_of_service_message }}}
    </label>
</div>
<div class="tlp-modal tlp-modal-danger" role="dialog"
     aria-labelledby="modal-warning-restricted-users-removal-label"
     id="modal-warning-restricted-users-removal"
     data-nb-restricted-users-in-project="{{ number_of_restricted_users_in_project }}"
>
    <div class="tlp-modal-header">
        <h1 class="tlp-modal-title" id="modal-warning-restricted-users-removal-label">
            {{# gettext }}Restricted users removal{{/ gettext }}
        </h1>
        <button class="tlp-modal-close" type="button" data-dismiss="modal" aria-label="{{# gettext }}Close{{/ gettext }}">
            <i class="fas fa-times tlp-modal-close-icon" aria-hidden="true"></i>
        </button>
    </div>
    <div class="tlp-modal-body">
        <p>
            {{# ngettext }}You are about to remove %s restricted user from this project. Please confirm your action. The removal will be done a few minutes after your confirmation. |
                You are about to remove %s restricted users from this project. Please confirm your action. The removal will be done a few minutes after your confirmation.
            | {{ number_of_restricted_users_in_project }}
            {{/ ngettext }}
        </p>
    </div>
    <div class="tlp-modal-footer">
        <button type="button" class="tlp-button-primary tlp-button-outline tlp-modal-action tlp-button-danger" data-dismiss="modal">
            {{# gettext }}Cancel{{/ gettext }}
        </button>
        <button type="submit" class="tlp-button-primary tlp-modal-action tlp-button-danger" id="modal-warning-restricted-users-removal-confirm">
            <i class="far fa-trash-alt tlp-button-icon"></i>
            {{# gettext }}Confirm{{/ gettext }}
        </button>
    </div>
</div>
