<tr  data-test="reference-pattern-row">
    <td><a href="{{ edit_url }}" title="{{ description}}">{{ keyword }}</a></td>
    <td>{{ description }}</td>
    <td>{{ nature }} </td>
    <td>{{# is_enabled }}<i class="fas fa-check"></i>{{/ is_enabled }}</td>
    {{# is_template_project }}
        <td>{{ scope }} </td>
        <td>{{ service_shortname }} </td>
    {{/  is_template_project }}
    {{# can_be_deleted }}
          <td>
            <form method="post" action="{{ delete_url }}" style="margin: 0;" onsubmit="return confirm('{{ delete_reference_label }}')">
                <button class="tlp-table-cell-actions-button tlp-button-small tlp-button-danger tlp-button-outline">
                    <i class="far fa-fw fa-trash-alt tlp-button-icon"></i> {{# gettext }}Delete{{/ gettext }}
                </button>
                {{# csrf_token }}
                   {{> csrf_token_input }}
                {{/ csrf_token }}
            </form>
          </td>
    {{/ can_be_deleted }}
    {{^ can_be_deleted }}
        <td></td>
    {{/ can_be_deleted }}
</tr>
