<section class="project-admin-details-info-access">
    <p id="project-admin-details-info-access-level">
        <i id="project-admin-details-info-access-level-icon"
            class="fa
            {{# is_wide_open }}fa-unlock{{/ is_wide_open }}
            {{# is_open }}fa-unlock-alt{{/ is_open }}
            {{# is_closed }}fa-lock{{/ is_closed }}
        "></i> {{ access }}
    </p>
    {{# is_public_incl_restricted }}
        <span class="tlp-badge-warning"
              id="project-admin-details-info-access-level-badge"
        >
            {{ incl_restricted_label }}
        </span>
    {{/ is_public_incl_restricted }}
</section>
