<form action=""
      method="post"
      id="project-admin-members-remove"
      class="tlp-modal tlp-modal-danger"
      role="dialog"
      aria-labelledby="project-admin-members-confirm-member-removal-modal-label"
>
    <div class="tlp-modal-header">
        <h1 class="tlp-modal-title" id="project-admin-members-confirm-member-removal-modal-label">
            {{# gettext }}Member removal{{/ gettext }}
        </h1>
        <button class="tlp-modal-close" type="button" data-dismiss="modal" aria-label="{{# gettext }}Close{{/ gettext }}"><i class="fas fa-times tlp-modal-close-icon" aria-hidden="true"></i></button>
    </div>
    <div class="tlp-modal-body">
        {{# csrf_token }}
            {{> csrf_token_input }}
        {{/ csrf_token }}

        <p id="project-admin-members-confirm-member-removal-modal-description"></p>

        <input type="hidden" name="action" value="remove-user">
        <input type="hidden" name="user_id" id="project-admin-members-confirm-member-removal-modal-user-id" value="">
    </div>
    <div class="tlp-modal-footer">
        <button type="button" class="tlp-button-danger tlp-button-outline tlp-modal-action" data-dismiss="modal">
            {{# gettext }}Cancel{{/ gettext }}
        </button>
        <button type="submit" class="tlp-button-danger tlp-modal-action" data-test="remove-from-member">
            <i class="far fa-trash-alt tlp-button-icon"></i>
            {{# gettext }}Remove{{/ gettext }}
        </button>
    </div>
</form>
