<div class="main-project-tabs">
<nav class="tlp-tabs dashboard-tabs">
    {{# dashboards }}
        <a class="tlp-tab {{# is_active }}tlp-tab-active{{/ is_active }}" href="{{ url }}?dashboard_id={{ id }}" data-test="dashboard-tab">
            {{ name }}
            {{# is_active }}
                {{# can_update_dashboards }}
                    <div class="tlp-dropdown dashboard-tabs-dropdown">
                        <i class="fa fa-cog fa-fw" id="dashboard-tabs-dropdown-trigger" data-test="dashboard-configuration-button"></i>
                        <div class="tlp-dropdown-menu tlp-dropdown-menu-on-icon" role="menu">
                            <span class="tlp-dropdown-menu-item add-widget-button"
                                  data-target-modal-id="add-widget-modal"
                                  data-href="{{ url_add_widget_content }}"
                                  role="menuitem"
                                  data-test="dashboard-add-widget-button"
                            >
                                <i class="tlp-dropdown-menu-item-icon fa fa-fw fa-plus"></i> {{ add_widget_title }}
                            </span>
                            <span class="tlp-dropdown-menu-separator" role="separator"></span>
                            <span class="tlp-dropdown-menu-item"
                                  id="edit-dashboard-button"
                                  data-target-modal-id="edit-dashboard-modal"
                                  role="menuitem"
                            >
                                <i class="tlp-dropdown-menu-item-icon fas fa-fw fa-pencil-alt"></i> {{ edit_dashboard_title }}
                            </span>
                            <span class="tlp-dropdown-menu-item tlp-dropdown-menu-item-danger"
                                  id="delete-dashboard-button"
                                  data-target-modal-id="delete-dashboard-modal"
                                  role="menuitem"
                                  data-test="dashboard-delete-tab-button"
                            >
                                <i class="tlp-dropdown-menu-item-icon far fa-fw fa-trash-alt"></i> {{ delete_dashboard_title }}
                            </span>
                        </div>
                    </div>
                {{/ can_update_dashboards }}
            {{/ is_active }}
        </a>
    {{/ dashboards }}
    {{# can_update_dashboards }}
        <button type="button"
           id="add-dashboard-button"
           class="tlp-button-secondary tlp-button-mini tlp-button-outline"
           data-target-modal-id="add-dashboard"
           data-test="dashboard-add-button"
        >
            <i class="fa fa-plus tlp-button-icon"></i>
            {{ add_dashboard_label }}
        </button>
    {{/ can_update_dashboards }}
</nav>
</div>
