<form method="POST"
      action="{{ url }}?action=edit-dashboard"
      id="edit-dashboard-modal"
      class="tlp-modal"
      aria-labelledby="edit-dashboard-label"
      role="dialog"
>
    <div class="tlp-modal-header">
        <h1 class="tlp-modal-title" id="edit-dashboard-label">
            {{ edit_dashboard_label }}
        </h1>
        <button class="tlp-modal-close" type="button" data-dismiss="modal" aria-label="{{ close }}">
            <i class="fas fa-times tlp-modal-close-icon" aria-hidden="true"></i>
        </button>
    </div>
    <div class="tlp-modal-body">
        <input type="hidden" name="dashboard-id" value="{{ id }}">
        {{# csrf_token }}
            {{> csrf_token_input }}
        {{/csrf_token}}

        <div class="tlp-form-element">
            <label class="tlp-label" for="edit-dashboard-name">{{ dashboard_name_label }} <i class="fa-solid fa-asterisk"></i></label>
            <input type="text"
                   class="tlp-input"
                   id="edit-dashboard-name"
                   name="dashboard-name"
                   placeholder="{{ dashboard_name_label }}"
                   value="{{ name }}"
                   required>
        </div>
    </div>
    <div class="tlp-modal-footer">
        <button type="button" class="tlp-button-primary tlp-button-outline tlp-modal-action" data-dismiss="modal">{{ cancel }}</button>
        <button type="submit" class="tlp-button-primary tlp-modal-action">
            <i class="fas fa-pencil-alt tlp-button-icon"></i>
            {{ edit_dashboard_label }}
        </button>
    </div>
</form>
