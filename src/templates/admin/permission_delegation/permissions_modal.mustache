<form action="permission_delegation.php?action=add-permissions"
      method="post"
      id="siteadmin-permission-delegation-add-perm-modal"
      class="tlp-modal"
      role="dialog"
>
    {{# csrf_token }}
        {{> csrf_token_input }}
    {{/ csrf_token }}
    <div class="tlp-modal-header">
        <h1 class="tlp-modal-title">
            {{ permissions_modal_title }}
        </h1>
        <button class="tlp-modal-close" type="button" data-dismiss="modal" aria-label="Close">
            <i class="fas fa-times tlp-modal-close-icon" aria-hidden="true"></i>
        </button>
    </div>
    <div class="tlp-modal-body">
        {{# has_permissions }}
            <p>{{{ purified_permissions_modal_description }}} :</p>

            {{# permissions }}
                <div class="tlp-form-element">
                    <label class="tlp-label tlp-checkbox" title="{{ getDescription }}">
                        <input type="checkbox" name="permissions[]" value="{{ getId }}" data-test="permission-{{ getId }}"/>
                        {{ getName }}
                    </label>
                </div>
            {{/ permissions }}

            <input type="hidden" name="id" value="{{ id }}" />
        {{/ has_permissions }}
        {{^ has_permissions }}
            <p>{{ no_permission_to_add }}</p>
        {{/ has_permissions }}
    </div>
    <div class="tlp-modal-footer">
        <button type="button" class="tlp-button-primary tlp-button-outline tlp-modal-action" data-dismiss="modal">
            {{ permissions_modal_cancel }}
        </button>
        {{# has_permissions }}
            <button type="submit"
                    class="tlp-button-primary tlp-modal-action"
                    id="siteadmin-permission-delegation-add-perm-modal-submit"
                    disabled
                    data-test="modal-add-permission-submit"
            >
                <i class="fa fa-plus tlp-button-icon"></i> {{ permissions_modal_submit }}
            </button>
        {{/has_permissions}}
    </div>
</form>
