<form action=""
      method="POST"
      class="tlp-modal tlp-modal-danger"
      role="dialog"
      id="delete-notification-modal-{{ id }}"
      aria-labelledby="delete-notification-modal-label-{{ id }}"
>
    {{# csrf }}
        {{> csrf_token_input }}
    {{/ csrf }}
    <div class="tlp-modal-header">
        <h1 class="tlp-modal-title" id="delete-notification-modal-label-{{ id }}">
            <i class="fa fa-trash-o tlp-modal-title-icon"></i> {{ delete_notif_label }}
        </h1>
        <div class="tlp-modal-close" tabindex="0" role="button" data-dismiss="modal" aria-label="Close">Ã—</div>
    </div>
    <div class="tlp-modal-body">
        <p>{{ delete_confirm }}</p>
    </div>
    <div class="tlp-modal-footer">
        <button type="button" class="tlp-button-danger tlp-button-outline tlp-modal-action" data-dismiss="modal">
            {{ cancel }}
        </button>
        <button type="submit" class="tlp-button-danger tlp-modal-action" name="delete" value="{{ id }}">
            <i class="fa fa-trash-o tlp-button-icon"></i> {{ delete_notif_label }}
        </button>
    </div>
</form>
