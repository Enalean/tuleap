{{# user_is_anonymous }}
    <form class="span3 sign-in" action="{{ most_secure_url }}/account/login.php" method="POST">
        <h3>{{ sign_in_title }}</h3>

        {{# login }}
            <div class="input-prepend">
                <span class="add-on"><i class="icon-user"></i></span>
                <input type="text" name="form_loginname" placeholder="{{ username_placeholder }}">
            </div>
            <div class="input-prepend">
                <span class="add-on"><i class="icon-lock"></i></span>
                <input type="password" name="form_pw" placeholder="{{ password_placeholder }}">
            </div>
            <input type="hidden" name="{{ csrf_token_name }}" value="{{ csrf_token_value }}">
            <button type="submit" name="login" class="btn btn-large btn-primary">{{ sign_in_submit }}</button>
            {{# allow_password_recovery }}
                <a class="lost-password" href="{{ most_secure_url }}/account/lostpw.php">{{ forgot_password }}</a>
                <span class="sign-in-or-line"></span><span class="sign-in-or">{{ sign_in_or }}</span><span class="sign-in-or-line"></span>
                <span class="sign-in-register">{{ not_a_member }} <a href="{{ most_secure_url }}/account/register.php">{{ register }}</a></span>
            {{/ allow_password_recovery }}
        {{/ login }}
    </form>
{{/ user_is_anonymous }}

{{^ user_is_anonymous }}
    <div class="span3 welcome-back">
        {{# user }}
            {{{ fetchHtmlAvatar }}}
            <h3>
                {{ welcome_back }}
                <br>
                <strong>{{ getRealName }}</strong>!
            </h3>
        {{/ user }}
    </div>
{{/ user_is_anonymous }}