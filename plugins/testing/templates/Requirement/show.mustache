<ul class="nav nav-tabs">
  <li><a href="/plugins/testing/?group_id=1&resource=campaign">Campaigns</a></li>
  <li class="active"><a href="/plugins/testing/?group_id=1&resource=requirement">Requirements</a></li>
</ul>
<h2>{{ name }} <small>(version #{{ version }})</small></h2>
<em>Here come the definition of the requirement</em>
<p>
    <a href="{{ edit_uri }}" class="btn disabled" onclick="return false;"><i class="icon-edit"></i> Create new version</a>
</p>

<h3>Test coverage</h3>
{{# has_test_cases }}
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>Test case</th>
            <th>Version</th>
        </tr>
    </thead>
    <tbody>
    {{# list_of_test_cases }}
        <tr>
            <td><a href="{show_uri}">{name}</td>
            <td>{version}</td>
        </tr>
    {{/ list_of_test_cases }}
    </tbody>
</table>
{{/ has_test_cases }}
{{^ has_test_cases }}
<div class="alert alert-warning">
    <h4>Warning!</h4>
    This requirement is not covered by any test.
</div>
{{/ has_test_cases }}
<button class="btn">Add test case</button>
