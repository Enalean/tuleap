<ul class="nav nav-tabs">
  <li class="active"><a href="/plugins/testing/?group_id=1&resource=campaign">Campaigns</a></li>
  <li><a href="/plugins/testing/?group_id=1&resource=requirement">Requirements</a></li>
</ul>
<h2>Active test campaigns</h2>
<p>
    <a href="/plugins/testing/?group_id=1&resource=campaign&action=new" class="btn"><i class="icon-plus"></i> Create new campaign</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        {{# list_of_campaign_presenters }}
        <tr>
            <td><a href="{{ show_uri }}">{{ name }}</a></td>
            <td>
                {{# stat }}
                <span class="badge" title="Not run">{{ nb_not_run }}</span>
                <span class="badge badge-success" title="Passed">{{ nb_pass }}</span>
                <span class="badge badge-important" title="Failed">{{ nb_fail }}</span>
                {{/ stat }}
            </td>
        </tr>
        {{/ list_of_campaign_presenters }}
    </tbody>
</table>
