<ul class="nav nav-tabs">
  <li><a href="/plugins/testing/?group_id=1&resource=requirement">Requirements</a></li>
  <li class="active"><a href="/plugins/testing/?group_id=1&resource=campaign">Campaigns</a></li>
  <li><a href="/plugins/testing/?group_id=1&resource=report">Reports</a></li>
</ul>
<h2>Active test campaigns</h2>
<p>
    <a href="/plugins/testing/?group_id=1&resource=campaign&action=neue" class="btn"><i class="icon-plus"></i> Create new campaign</a>
</p>

<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Release</th>
            <th>Status</th>
            <th>Progress</th>
            <th class="span1">Delete?</th>
        </tr>
    </thead>
    <tbody>
        {{# list_of_campaign_info_presenters }}
        <tr>
            <td><a href="{{ show_uri }}">{{ name }}</a></td>
            <td>{{# release }}{{ name }}{{/ release }}</td>
            <td>
                {{# stat }}
                    {{> badge-status }}
                {{/ stat }}
            </td>
            <td>
                {{# stat }}
                <div class="progress">
                    <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="{{ percent_complete }}" aria-valuemin="0" aria-valuemax="100" style="width: {{ percent_complete }}%;">
                        <span>{{ percent_complete }}% Complete</span>
                    </div>
                </div>
                {{/ stat }}
            </td>
            <td><a href="{{ delete_uri }}" title="Delete permanently this campaign"><i class="icon-trash"></i></a></td>
        </tr>
        {{/ list_of_campaign_info_presenters }}
    </tbody>
</table>
