<ul class="nav nav-tabs">
  <li class="active"><a href="/plugins/testing/?group_id=1&resource=campaign">Campaigns</a></li>
  <li><a href="/plugins/testing/?group_id=1&resource=requirement">Requirements</a></li>
</ul>
<h2>{{ name }}</h2>
<p>
    <button type="button" class="btn btn-primary"><i class="icon-play"></i> Execute test cases assigned to me</button>
    <a href="{{ edit_uri }}" type="button" class="btn disabled" onclick="return false;"><i class="icon-edit"></i> Edit campaign</a>
    <!-- a href="#" type="button" class="btn"><i class="icon-th-list"></i> Add/remove test cases</a -->
    <a href="/plugins/testing/?group_id=1&resource=campaign&action=report&id=123" type="button" class="btn"><i class="icon-bar-chart"></i> Reports</a>
</p>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Test case</th>
            <th>Assigned to</th>
            <th>Status
                {{# stat }}
                    {{> badge-status }}
                {{/ stat }}
            </th>
        </tr>
    </thead>
    <tbody>
        {{# list_of_execution_info_presenters }}
        </tr>
            <td><a href="{{ show_uri }}">{{ name }}</a></td>
            <td>{{ assignee }}</td>
            <td>{{> label-status }}</td>
        </tr>
        {{/ list_of_execution_info_presenters }}
    </tbody>
</table>
