<div class="cardwall_board-actions">
    <input type="text" class="search-in-cardwall" placeholder="{{search_cardwall_placeholder}}" />
    {{#isUserLoggedIn}}
        <div class="btn-group">
            <button class="btn dropdown-toggle" data-toggle="dropdown">
                <i class="icon-cog"></i>
                <span class="caret"></span>
            </button>
            <ul class="dropdown-menu pull-right">
                <li><a title="{{display_avatar_title}}" href="{{switch_display_username_url}}">
                    {{#isDisplayAvatarSelected}}
                        <i class="icon-ok"></i>
                    {{/isDisplayAvatarSelected}}
                    {{display_avatar_label}}
                </a></li>
                {{#canConfigure}}
                    <li class="divider"></li>
                    <li><a href="{{configure_url}}">Configure</a></li>
                {{/canConfigure}}
            </ul>
        </div>
    {{/isUserLoggedIn}}
</div>

{{> agiledashboard-minimalpane }}

