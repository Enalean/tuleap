<section class="tlp-pane">
    <div class="tlp-pane-container">
        <div class="tlp-pane-header">
            <h1 class="tlp-pane-title"> {{# dgettext }} tuleap-mediawiki | Mediawiki permissions {{/ dgettext }}</h1>
        </div>

        <section class="tlp-pane-section">
            <table class="tlp-table">
                <thead>
                <tr>
                    <th> {{# dgettext }} tuleap-mediawiki | Permission {{/ dgettext }}</th>
                    <th> {{# dgettext }} tuleap-mediawiki | Granted groups {{/ dgettext }}</th>
                </tr>
                </thead>
                <tbody>
                {{# permissions }}
                    <tr>
                        <td><a href="{{ url }}">{{ name }}</a></td>
                        <td>
                            {{# groups }}
                                <span class="
                                        {{# is_project_admin }}tlp-badge-danger tlp-badge-outline{{/ is_project_admin }}
                                        {{# is_static }}tlp-badge-primary tlp-badge-outline{{/ is_static }}
                                        {{# is_custom }}tlp-badge-secondary{{/ is_custom }}
                                    ">{{ name }}</span>
                            {{/ groups }}
                        </td>
                    </tr>
                {{/ permissions }}
                {{^ has_permissions }}
                    <tr>
                        <td colspan="2" class="tlp-table-cell-empty">
                            {{# dgettext }} tuleap-mediawiki | {{ user_group_name }} has no permission for Mediawiki {{/ dgettext }}
                        </td>
                    </tr>
                {{/ has_permissions }}
                </tbody>
            </table>
        </section>
    </div>
</section>
