<h1 class="project-administration-title">{{ admin_title }}</h1>

<div class="main-project-tabs">
    <nav class="tlp-tabs">
        <a class="tlp-tab" href="?group_id={{ group_id }}&pane=permissions">{{ permissions_label }}</a>
        <a class="tlp-tab tlp-tab-active" href="?group_id={{ group_id }}&pane=language">{{ language_label }}</a>
    </nav>
</div>

<div class="tlp-framed">
    <section class="tlp-pane">
        <form method="post" action="{{ route }}" class="tlp-pane-container">
            <div class="tlp-pane-header">
                <h1 class="tlp-pane-title">
                    {{ available_languages_title }}
                </h1>
            </div>
            <div class="tlp-pane-section">
                <p>
                    {{ available_languages_intro }}
                </p>

                <div class="tlp-form-element">
                    {{# available_languages }}
                        <label class="tlp-label tlp-radio">
                            <input type="radio" name="language" value="{{ language }}" {{# used }} checked {{/ used }}>
                            {{ language }}
                        </label>
                    {{/ available_languages }}
                </div>

                {{# csrf_token }}
                    {{> csrf_token_input }}
                {{/csrf_token}}

                <div class="tlp-pane-section-submit">
                    <input type="submit" name="submit" value="{{ save_changes }}" class="tlp-button-primary">
                </div>
            </div>
        </form>
    </section>
</div>
