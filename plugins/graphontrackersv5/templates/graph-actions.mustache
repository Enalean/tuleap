{{# can_be_updated }}
<div class="widget_titlebar_close">
    <a
        href="{{ delete_url }}"
        onclick="return confirm({{ confirm_label }});"
        class="fa fa-times" title="{{ delete_title }}">
    </a>
</div>
{{/ can_be_updated }}

<div class="widget_titlebar_prefs dropdown">
    <a class="fa fa-cog dropdown-toggle" data-toggle="dropdown"></a>

    <ul class="dropdown-menu pull-right">
        {{# can_be_updated }}
            <li>
                <a title="{{ edit_title }}" href="{{ edit_url }}">
                    {{ edit_title }}
                </a>
            </li>
        {{/ can_be_updated }}

        {{# report_is_created }}
            {{# has_user_dashboard }}
                <li class="divider"></li>
                {{# has_one_user_dashboard }}
                    {{# user_dashboards }}
                        <li>
                            <form method="post" action="/widgets/">
                                {{# my_dashboard_form_settings }}
                                    <input type="hidden" name="{{ name }}" value="{{ value }}">
                                {{/ my_dashboard_form_settings }}
                                <input type="hidden" name="dashboard-id" value="{{ getId }}" />
                                <button class="btn-link" type="submit">
                                    {{ add_to_my_dashboard_label }}
                                </button>
                            </form>
                        </li>
                    {{/ user_dashboards }}
                {{/ has_one_user_dashboard }}
                {{^ has_one_user_dashboard }}
                    <li class="dropdown-header add-widget-to-dashboard">
                        {{ add_to_my_dashboard_label }}
                    </li>
                    {{# user_dashboards }}
                    <li>
                        <form method="post" action="/widgets/">
                            {{# my_dashboard_form_settings }}
                                <input type="hidden" name="{{ name }}" value="{{ value }}">
                            {{/ my_dashboard_form_settings }}
                            <input type="hidden" name="dashboard-id" value="{{ getId }}" />
                            <button class="btn-link" type="submit">{{ getName }}</button>
                        </form>
                    </li>
                    {{/ user_dashboards }}
                {{/ has_one_user_dashboard }}
            {{/ has_user_dashboard }}
            {{# has_project_dashboard }}
                <li class="divider"></li>
                {{# has_one_project_dashboard }}
                    {{# project_dashboards }}
                        <li>
                            <form method="post" action="/widgets/">
                                {{# project_dashboard_form_settings }}
                                    <input type="hidden" name="{{ name }}" value="{{ value }}">
                                {{/ project_dashboard_form_settings }}
                                <input type="hidden" name="dashboard-id" value="{{ getId }}" />
                                <button class="btn-link" type="submit">
                                    {{ add_to_project_dashboard_label }}
                                </button>
                            </form>
                        </li>
                    {{/ project_dashboards }}
                {{/ has_one_project_dashboard }}
                {{^ has_one_project_dashboard }}
                    <li class="dropdown-header add-widget-to-dashboard"
                        title="{{ add_to_project_dashboard_label }}">
                        {{ add_to_project_dashboard_label }}
                    </li>
                    {{# project_dashboards }}
                        <li>
                            <form method="post" action="/widgets/">
                                {{# project_dashboard_form_settings }}
                                    <input type="hidden" name="{{ name }}" value="{{ value }}">
                                {{/ project_dashboard_form_settings }}
                                <input type="hidden" name="dashboard-id" value="{{ getId }}" />
                                <button class="btn-link" type="submit">{{ getName }}</button>
                            </form>
                        </li>
                    {{/ project_dashboards }}
                {{/ has_one_project_dashboard }}
            {{/ has_project_dashboard }}
        {{/ report_is_created }}
    </ul>
</div>
