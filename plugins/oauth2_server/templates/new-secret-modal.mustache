<form
    action="{{ generate_new_secret_url }}"
    id="oauth2-server-new-secret-modal"
    class="tlp-modal tlp-modal-danger"
    role="dialog"
    aria-labelledby="oauth2-server-new-secret-label"
    method="post"
    data-test="oauth2-new-secret-modal"
>
    {{# csrf_token }}
        {{> csrf_token_input }}
    {{/ csrf_token }}
    <div class="tlp-modal-header">
        <h1 class="tlp-modal-title" id="oauth2-server-new-secret-label">
            <i class="fa fa-key tlp-modal-title-icon"></i> {{# dgettext }}tuleap-oauth2_server | Generate a new client secret {{/ dgettext }}
        </h1>
        <div
            class="tlp-modal-close"
            tabindex="0"
            role="button"
            data-dismiss="modal"
            aria-label="{{# dgettext }}tuleap-oauth2_server | Close {{/ dgettext }}"
        ></div>
    </div>
    <div class="tlp-modal-body">
        {{# csrf_token }}
            {{> csrf_token_input }}
        {{/ csrf_token }}
        <input type="hidden" name="app_id" id="oauth2-server-new-secret-app-id">
        <p id="oauth2-server-new-secret-app-name"></p>
    </div>
    <div class="tlp-modal-footer">
        <button type="reset" class="tlp-button-danger tlp-button-outline tlp-modal-action" data-dismiss="modal">
            {{# dgettext }}tuleap-oauth2_server | Cancel {{/ dgettext }}
        </button>
        <button type="submit" class="tlp-button-danger tlp-modal-action" data-test="oauth2-new-secret-modal-submit-button">
            <i class="fa fa-key tlp-button-icon"></i>
            {{# dgettext }}tuleap-oauth2_server | Generate a new client secret {{/ dgettext }}
        </button>
    </div>
</form>
