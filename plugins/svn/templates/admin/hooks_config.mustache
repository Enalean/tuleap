{{> admin/section_presenter }}

<div class="tlp-framed">
    <section class="tlp-pane">
        <div class="tlp-pane-container">
            <div class="tlp-pane-header">
                <h1 class="tlp-pane-title">
                    <i class="fa-regular fa-trash-alt tlp-pane-title-icon" aria-hidden="true"></i>
                    {{ hooks_config_subtitle }}
                </h1>
            </div>
            <form class="tlp-pane-section" action="/plugins/svn/?group_id={{ project_id }}&repo_id={{ repository_id }}&action=save-hooks-config" method="post">
                <p>{{ comment }}</p>

                <div class="tlp-form-element">
                    <label class="tlp-label tlp-checkbox">
                        <input type="checkbox"
                            name="pre_commit_must_contain_reference"
                            {{# pre_commit_must_contain_reference }}checked{{/ pre_commit_must_contain_reference }}
                            value="true"
                        >
                        {{ label_pre_commit_must_contain_reference }}
                    </label>
                </div>

                <div class="tlp-form-element">
                    <label class="tlp-label tlp-checkbox">
                        <input type="checkbox"
                            name="allow_commit_message_changes"
                            {{# allow_commit_message_changes }}checked{{/ allow_commit_message_changes }}
                            value="true"
                        >
                        {{ label_allow_commit_message_changes }}
                    </label>
                </div>

                <div class="tlp-pane-section-submit">
                    {{{ csrf_input }}}
                    <input type="hidden" name="group_id" value="{{ project_id }}">
                    <input type="hidden" name="repo_id" value="{{ repository_id }}">
                    <button type="submit" name="submit" class="tlp-button-primary">
                        <i class="fa-solid fa-save tlp-button-icon" aria-hidden="true"></i>
                        {{ submit }}
                    </button>
                </div>
            </form>
        </div>
    </section>
</div>
