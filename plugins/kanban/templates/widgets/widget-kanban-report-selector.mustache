<div class="tlp-form-element">
    <label class="tlp-label" for="kanban-reports-list">
        {{# dgettext }}
            tuleap-kanban
            | Filter:
        {{/ dgettext}}
        <i class="fa fa-asterisk"></i>
    </label>
    <select id="kanban-reports-list"
            class="tlp-select"
            name="kanban-report-filter"
            required
    >
        <option value="0">
            {{# dgettext }}
                tuleap-kanban
                | None
            {{/ dgettext }}
        </option>

        {{# widget_tracker_reports }}
            {{# selectable }}
                <option value="{{ id }}"
                        {{# selected }}selected{{/ selected }}
                >
                    {{ name }}
                </option>
            {{/selectable}}
        {{/ widget_tracker_reports }}
    </select>
</div>
