<div id="admin-config-bot-edit-{{ id }}"
    class="modal hide fade"
    tabindex="-1"
    role="dialog"
    aria-labelledby="admin-config-bot-edit-title"
    aria-hidden="true"
>

    <div class="modal-header">
        <a role="button" class="close" data-dismiss="modal">
            <i class="fas fa-times modal-close-icon" aria-hidden="true"></i>
        </a>
        <h3 id="configuration-edit-bot-title">
            {{ modal_edit_title }}</h3>
    </div>

    <form method="POST" action="/plugins/botmattermost_git/?action=edit_bot" >
        {{# csrf_token }}
            {{> csrf_token_input }}
        {{/ csrf_token }}
        <input type="hidden" name="group_id" value="{{ project_id }}" />
        <input type="hidden" name="repository_id" value="{{ repository_id }}">

        <div class="modal-body">
            <label for="bot-mattermost-channels-names">{{ label_channels_handles }}</label>
            <input name="channels"
                   class="input_channels"
                   value="{{ channels }}"
                   placeholder="{{ input_channels_handles }}"
                   hidden
                   multiple
            />
            <p class="text-info"><i class="fa-solid fa-circle-info"></i> {{{ purified_info_channels_handles }}}</p>
        </div>

        <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true">{{ button_close }}</button>
            <button type="submit" class="btn btn-primary"><i class="fa fa-pencil-square-o"></i> {{ button_edit }}</button>
        </div>
    </form>

</div>
