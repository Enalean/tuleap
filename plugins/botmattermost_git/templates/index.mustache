<div id="git-notification-mattermost-section">
    <h3>{{title}}</h3>
    {{^ bot_assigned }}
        <div class="git-notification-mattermost-configuration-empty-state">
            <p>{{ any_configured_notification }}</p>
            {{# has_bots }}
                <p class="git-notification-mattermost-configuration-description">{{ any_configured_notification_tips }}</p>
                <button class="btn btn-primary" data-toggle="modal" href="#admin-config-bot-add" data-test="add-git-bot">
                    <i class="fa-solid fa-plus"></i> {{ button_config }}
                </button>
            {{/ has_bots }}
            {{^ has_bots }}
                <p>{{ empty_bot_list }}</p>
            {{/ has_bots }}
        </div>
        {{> modal-add-bot }}
    {{/ bot_assigned }}
    {{# bot_assigned }}
        <section class="panel">
            <div class="panel-header">
                <p class="panel-name">
                    {{# avatar }}<img class="avatar img-circle" src="{{ avatar }}">{{/ avatar }}
                    {{ name }}
                </p>
            </div>
            <div class="panel-container" data-test="git-bot-mattermost-list">
                <section class="panel-section">
                    <p class="bot-assigned-label">{{ label_channels_handles }}</p>
                    {{# channels }}<p>{{ channels }}</p>{{/ channels }}
                    {{^ channels }}
                        <div class="git-notification-mattermost-configuration-empty-state">
                            <p class="git-notification-mattermost-configuration-description">{{ empty_channel_list }}</p>
                        </div>
                    {{/ channels }}
                </section>
                <section class="panel-section panel-section-actions button-group">
                    <button class="btn btn-primary" data-toggle="modal" href="#admin-config-bot-edit-{{ id }}">
                        <i class="fa fa-pencil-square-o"></i> {{ button_edit }}
                    </button>
                    <button class="btn btn-danger" data-toggle="modal" href="#admin-config-bot-delete-{{ id }}">
                        <i class="fa fa-trash-o"></i> {{ button_delete }}
                    </button>
                    {{> modal-edit-bot }}
                    {{> modal-delete-bot }}
                </section>
            </div>
        </section>
    {{/ bot_assigned }}
</div>
