<div class="tlp-framed-horizontally">
    <h2 class="program-management-subtitle">
        {{# dgettext }}tuleap-program_management | Milestones{{/ dgettext }}
        <small>{{# dgettext }}tuleap-program_management | Program Increments, Iterations{{/ dgettext }}</small>
    </h2>

    <section class="tlp-pane program-management-admin-pane">
        <div class="tlp-alert-danger program-management-error-rest-not-show" id="program-management-save-configuration-error-rest"></div>
        <form id="form-program-configuration" class="program-management-admin-form">
            {{> milestones/admin-configuration-program-increment-section }}
            {{> milestones/admin-configuration-iteration-section }}
            <section class="tlp-pane-section tlp-pane-section-submit">
                <button
                    class="tlp-button-primary program-management-admin-button-save-configuration"
                    id="program-management-admin-button-save-configuration"
                >
                    <i class="fas fa-save tlp-button-icon" aria-hidden="true"></i>
                    {{# dgettext }}tuleap-program_management | Save milestones configuration{{/ dgettext }}
                </button>
            </section>
        </form>
    </section>
</div>
