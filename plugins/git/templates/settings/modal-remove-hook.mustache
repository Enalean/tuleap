<div id="remove-{{ id }}-modal" role="dialog" aria-labelledby="modal-label" class="tlp-modal tlp-modal-danger">
    <div class="tlp-modal-header">
        <h1 class="tlp-modal-title" id="modal-label">{{# dgettext }} tuleap-git | Wait a minute... {{/ dgettext }}</h1>
        <button class="tlp-modal-close" type="button" data-dismiss="modal"
                aria-label="{{# dgettext }} tuleap-git | Close {{/ dgettext }}">
            <i class="fa-solid fa-xmark tlp-modal-close-icon" aria-hidden="true"></i>
        </button>
    </div>
    <form action="{{ remove_form_action }}" method="POST">
        <input type="hidden" name="repo_id" value="{{ repository_id }}"/>
        <input type="hidden" name="action" value="remove-webhook"/>
        <input type="hidden" name="webhook_id" value="{{ id }}"/>
        <input type="hidden" name="challenge" value="{{ csrf_token }}"/>
        <div class="tlp-modal-body">
            <p>{{ remove_webhook_desc }}</p>
        </div>
        <div class="tlp-modal-footer">
            <button type="button" class="tlp-button-danger tlp-button-outline tlp-modal-action"
                    data-dismiss="modal">{{ btn_cancel }}</button>
            <button type="submit" class="tlp-button-danger tlp-modal-action">{{ remove_webhook_confirm }}</button>
        </div>
    </form>
</div>
