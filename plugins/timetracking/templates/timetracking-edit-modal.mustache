<div id="timetracking-edit-{{ id }}"
     class="modal hide fade"
     tabindex="-1"
     role="dialog"
     aria-labelledby="timetracking-edit-time-modal-title"
     aria-hidden="true"
>
    <div class="modal-header">
        <h3>{{# dgettext }} tuleap-timetracking | Edit time {{/ dgettext }}</h3>
    </div>

    <form action="{{ edit_url }}" method="post">
        <div class="modal-body">
            {{# csrf_token }}
                {{> csrf_token_input }}
            {{/ csrf_token }}

            <input type="hidden" name="time-id" value="{{ id }}">

            <label>{{# dgettext }} tuleap-timetracking | Step {{/ dgettext }}</label>
            <input type="text" name="timetracking-edit-time-step" value="{{ step }}">

            <label>{{# dgettext }} tuleap-timetracking | Date {{/ dgettext }}</label>
            <div class="input-prepend dropdown input-append date">
                <span class="tuleap_field_date">
                    <input name="timetracking-edit-time-date"
                           id="timetracking-edit-time-date"
                           data-test="timetracking-edit-row-date"
                           data-format="yyyy-MM-dd"
                           type="text"
                           value="{{ day }}">
                    </input>
                    <span class="add-on add-on-calendar">
                        <i class="fa fa-calendar" data-time-icon="fa-clock-o" data-date-icon="fa-calendar"></i>
                    </span>
                </span>
            </div>

            <label>{{# dgettext }} tuleap-timetracking | Time {{/ dgettext }}</label>
            <input type="text"
                   name="timetracking-edit-time-time"
                   data-test="timetracking-edit-row-time"
                   placeholder="00:00"
                   pattern="{{ pattern }}"
                   required
                   value="{{ time }}"
            >
        </div>

        <div class="modal-footer">
            <button type="button" class="btn" data-dismiss="modal" aria-hidden="true">{{# gettext }}Close{{/ gettext }}</button>
            <input type="submit"
                   class="btn btn-primary"
                   name="timetracking-edit-time"
                   data-test="timetracking-edit-time"
                   value="{{# dgettext }} tuleap-timetracking | Edit time {{/ dgettext }}"
            >
        </div>
    </form>
</div>
