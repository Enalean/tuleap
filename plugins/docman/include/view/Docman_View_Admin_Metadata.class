require_once('Docman_View_Extra.class');

class Docman_View_Admin_Metadata extends Docman_View_Extra {
    
    function _title($params) {
        echo '<h2>'. $this->_getTitle($params) .' - '. $GLOBALS['Language']->getText('plugin_docman', 'admin_metadata_title') .'</h2>';
    }
    function _content($params) {
        $mdIter =& $params['mdIter'];
        
        $content = $GLOBALS['Language']->getText('plugin_docman', 'admin_metadata_instructions');
        
        $content .= html_build_list_table_top(array('Name'
                                                    ,'Description'
                                                    ,'Status'
                                                    ,'Delete'
                                                    ));
        $altRowClass = 0;

        $mdIter->rewind();
        while($mdIter->valid()) {
            $md =& $mdIter->current();
            
            $trclass = html_get_alt_row_color($altRowClass++);
            $content .= '<tr class="'.$trclass.'">';

            $nameUrl  = $this->buildUrl($params['default_url'],
                                        array('action' => 'admin_md_details',
                                              'md'     => $md->getLabel()));
            $nameHref = '<a href="'.$nameUrl.'">'.$md->getName().'</a>';
            $content .= '<td>'.$nameHref.'</td>';

            $content .= '<td>'.$md->getDescription().'</td>';

            $content .= '<td>';
            if($md->isRequired()) {
                $content .= "-";
            }
            else {
                if($md->isUsed()) {
                    $content .= "Used";
                }
                else {
                    $content .= "Unused";
                }
            }
            $content .= '</td>';
            
            $content .= '<td>-</td>';
            
            $content .= '</tr>'."\n";

            $mdIter->next();
        }

        $content .= '</table>'."\n";

        print $content;
    }
}

?>
