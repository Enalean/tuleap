require_once('Docman_Validator.class');

class Docman_ValidateTitle extends Docman_ValidatePresenceOf {
    function Docman_ValidateTitle() {
        $request =& HTTPRequest::instance();
        $msg = $GLOBALS['Language']->getText('plugin_docman', 'error_field_title_required');
        parent::Docman_ValidatePresenceOf($request->get('item'), 'title', $msg);
    }
}

