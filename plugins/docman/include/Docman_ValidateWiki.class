require_once('Docman_Validator.class');

class Docman_ValidateWiki extends Docman_ValidatePresenceOf {
    function Docman_ValidateWiki() {
        $request =& HTTPRequest::instance();
        $msg = $GLOBALS['Language']->getText('plugin_docman', 'error_field_wiki_required');
        parent::Docman_ValidatePresenceOf($request->get('item'), 'wiki_page', $msg);
    }
}

