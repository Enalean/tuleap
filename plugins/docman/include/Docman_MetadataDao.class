require_once('common/dao/include/DataAccessObject.class');

class Docman_MetadataDao extends DataAccessObject {

    function Docman_MetadataDao(&$da) {
        DataAccessObject::DataAccessObject($da);
    }

    function searchById($id) {
        $sql = sprintf('SELECT *'
                       .' FROM plugin_docman_metadata'
                       .' WHERE field_id = %d'
                       , $id);
        return $this->retrieve($sql);
    }

    function searchByGroupId($id, $onlyUsed, $type = array()) {
        $where_clause = '';
        if($onlyUsed) {
            $where_clause .= ' AND use_it = '.PLUGIN_DOCMAN_METADATA_USED;
        }

        if(is_array($type) && count($type) > 0) {
            $where_clause .= ' AND data_type IN ('.implode(',', $type).')';
        }
        
        $sql = sprintf('SELECT *'
                       .' FROM plugin_docman_metadata'
                       .' WHERE group_id = %d'
                       .$where_clause
                       , $id);

        return $this->retrieve($sql);
    }

    // Very limited implementation of update
    // right now, only 'use_it' field is concerned by update
    function updateById($id, $useIt) {
        $row = array('field_id' => $id,
                     'use_it' => $useIt);
        return $this->updateFromRow($row);
    }

    function updateFromRow($row) {
        $updated = false;
        $id = false;
        if(!isset($row['field_id'])) {
            return false;
        }
        $id = (int) $row['field_id'];        
        if ($id) {
            $dar =& $this->searchById($id);
            if (!$dar->isError() && $dar->valid()) {
                $current =& $dar->current();
                $set_array = array();
                foreach($row as $key => $value) {
                    if ($key != 'field_id' && $value != $current[$key]) {
                        $set_array[] = $key .' = '. $this->da->quoteSmart($value);
                    }
                }
                if (count($set_array)) {
                    $sql = 'UPDATE plugin_docman_metadata'
                        .' SET '.implode(' , ', $set_array)
                        .' WHERE field_id='.$id;
                    $updated = $this->update($sql);
                }
            }
        }
        return $updated;        
    }

    function create($groupId, $name, $type, $description, $isRequired,
                    $isEmptyAllowed, $special, $defaultValue, $useIt) {
        $sql = sprintf('INSERT INTO plugin_docman_metadata('.
                       'group_id, name, data_type, description,'.
                       'required, empty_ok, special,'.
                       'default_value, use_it'.
                       ') VALUES ('.
                       '%d, %s, %d, %s,'.                       
                       '%d, %d, %d,'.
                       '%s, %d'.
                       ')',
                       $groupId,
                       $this->da->quoteSmart($name),
                       $type,
                       $this->da->quoteSmart($description),
                       $isRequired,
                       $isEmptyAllowed,
                       $special,
                       $this->da->quoteSmart($defaultValue),
                       $useIt);

        $mdId = $this->_createAndReturnId($sql);
        if($mdId !== false) {
            //update label
            $row = array('field_id' => $mdId,
                         'label'    => 'field_'.$mdId);
            $updated = $this->updateFromRow($row);
            if(!$updated) {
                return false;
            }
            else {
                return $mdId;
            }            
        }
        else {
            return false;
        }

    }

    function _createAndReturnId($sql) {
        $inserted = $this->update($sql);
        if ($inserted) {
            $dar =& $this->retrieve("SELECT LAST_INSERT_ID() AS id");
            if ($row = $dar->getRow()) {
                $inserted = $row['id'];
            } else {
                $inserted = $dar->isError();
            }
        }
        return $inserted;
    }
}

?>
