require_once('Docman_Validator.class');

class Docman_ValidateLink extends Docman_ValidatePresenceOf {
    function Docman_ValidateLink() {
        $request =& HTTPRequest::instance();
        $msg = $GLOBALS['Language']->getText('plugin_docman', 'error_field_link_required');
        parent::Docman_ValidatePresenceOf($request->get('item'), 'link_url', $msg);
    }
}

