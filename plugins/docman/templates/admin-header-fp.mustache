        {{# tabs }}
            <li {{# is_active}}class="active"{{/ is_active }}>
                <a href="{{ url }}" title="{{ description }}">{{ title }}</a>
            </li>
        {{/ tabs }}
        {{# extra_tabs }}
            <li class="dropdown{{# is_active }} active{{/ is_active }}">
                <a class="dropdown-toggle" data-toggle="dropdown">
                    <i class="fas fa-bars"></i>
                    <i class="caret"></i>
                </a>
                <ul class="dropdown-menu">
                    {{# tabs }}
                        <li>
                            <a href="{{ url }}" title="{{ description }}">
                                {{ title }}
                            </a>
                        </li>
                    {{/ tabs }}
                </ul>
            </li>
        {{/ extra_tabs }}
    </ul>
</div>
