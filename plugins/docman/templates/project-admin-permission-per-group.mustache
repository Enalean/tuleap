<section class="tlp-pane">
    <div class="tlp-pane-container">
        <div class="tlp-pane-header">
            <h1 class="tlp-pane-title">
                {{# dgettext }} tuleap-docman | Document manager {{/ dgettext }}
                <span class="tlp-tooltip tlp-tooltip-top permission-per-group-header-tooltip" data-tlp-tooltip="
                    {{# dgettext }}
                        tuleap-docman
                        | Items permissions are not listed.
                    {{/ dgettext }}
                ">
                    <i class="fa-solid fa-circle-question" aria-label="
                        {{# dgettext }}
                        tuleap-docman
                        | Items permissions are not listed.
                    {{/ dgettext }}
                    "></i>
                </span>
            </h1>
        </div>

        <section class="tlp-pane-section">
            <h2 class="tlp-pane-subtitle">{{# dgettext }} tuleap-docman |  Global permissions {{/ dgettext }}</h2>
            <table class="tlp-table permission-per-group-table">
                <thead>
                <tr class="permission-per-group-double-column-table">
                    <th>{{# dgettext }} tuleap-docman |  Permission {{/ dgettext }}</th>
                    <th>{{# dgettext }} tuleap-docman |  Granted groups {{/ dgettext }}</th>
                </tr>
                </thead>
                <tbody>
                {{# permissions }}
                    <tr>
                        <td><a href="{{ url }}">{{ name }}</a></td>
                        <td>
                            {{# groups }}
                                <span class="{{# is_project_admin }}tlp-badge-danger tlp-badge-outline{{/ is_project_admin }}
                                    {{# is_static }}tlp-badge-primary tlp-badge-outline{{/ is_static }}
                                    {{# is_custom }}tlp-badge-secondary tlp-badge-outline{{/ is_custom }}">{{ name }}</span>
                            {{/ groups }}
                        </td>
                    </tr>
                {{/ permissions }}
                {{^ has_permissions }}
                    <tr>
                        <td colspan="2" class="tlp-table-cell-empty">
                            {{# dgettext }} tuleap-docman |  {{ user_group_name }} has no global permission {{/ dgettext }}
                        </td>
                    </tr>
                {{/ has_permissions }}
                </tbody>
            </table>
        </section>

    </div>
</section>
