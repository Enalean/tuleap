<div id="modal-delete-quota-{{ project_id }}"
     class="tlp-modal tlp-modal-danger"
     role="dialog"
     aria-labelledby="modal-delete-quota-{{ project_id }}-label">
    <div class="tlp-modal-header">
        <h1 class="tlp-modal-title" id="modal-delete-quota-{{ project_id }}-label">
            {{ delete_quota_label }}
        </h1>
        <button class="tlp-modal-close" type="button" data-dismiss="modal" aria-label="Close">
            <i class="fas fa-times tlp-modal-close-icon" aria-hidden="true"></i>
        </button>
    </div>
    <div class="tlp-modal-body">
        <p>{{{ purified_delete_confirm }}}</p>
    </div>
    <form action="" method="POST" class="tlp-modal-footer">
        {{# csrf }}
            {{> csrf_token_input }}
        {{/ csrf }}
        <input type="hidden" name="action" value="delete">
        <button type="button" class="tlp-button-danger tlp-button-outline tlp-modal-action" data-dismiss="modal">
            {{ cancel_label }}
        </button>
        <button type="submit" class="tlp-button-danger tlp-modal-action" name="delete_quota" value="{{ project_id }}" data-test="modal-confirmation-delete-quota">
            <i class="far fa-trash-alt tlp-button-icon"></i> {{ delete_quota_label }}
        </button>
    </form>
</div>
