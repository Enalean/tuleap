{{# scm_statistics_presenter }}
    <form method="GET" action="scm_stats.php" class="tlp-pane-section">
        <label class="tlp-label tlp-radio">
            <input type="radio" name="data-export-content" value="siteadmin-export-data-services-usage" /> {{ services_usage_label }}
        </label>
        <label class="tlp-label tlp-radio">
            <input type="radio" name="data-export-content" value="siteadmin-export-data-scm-statistics" checked /> {{ scm_statistics_label }}
        </label>
        <div class="siteadmin-export-data-content-border">
            <div class="siteadmin-export-data-content">
                <div class="tlp-form-element">
                    <label for="date-picker-scm-statistics-start" class="tlp-label">{{ start_date_label }} <i class="fa-solid fa-asterisk"></i></label>
                    <div class="tlp-form-element tlp-form-element-prepend">
                        <span class="tlp-prepend"><i class="fas fa-calendar-alt"></i></span>
                        <input type="text"
                               name="scm_statistics_start_date"
                               id="date-picker-scm-statistics-start"
                               class="tlp-input tlp-input-date"
                               size="11"
                               required
                               value="{{ scm_statistics_start_date }}">
                    </div>
                </div>

                <div class="tlp-form-element">
                    <label for="date-picker-scm-statistics-end" class="tlp-label">{{ end_date_label }} <i class="fa-solid fa-asterisk"></i></label>
                    <div class="tlp-form-element tlp-form-element-prepend">
                        <span class="tlp-prepend"><i class="fas fa-calendar-alt"></i></span>
                        <input type="text"
                               name="scm_statistics_end_date"
                               id="date-picker-scm-statistics-end"
                               class="tlp-input tlp-input-date"
                               size="11"
                               required
                               value="{{ scm_statistics_end_date }}">
                    </div>
                </div>

                <div class="tlp-form-element scm-statistics-project-form">
                    <label class="tlp-label" for="project-filter">{{ project_label }}</label>
                    <select class="tlp-select project-autocompleter"
                            id="scm-statistics-project-select"
                            name="scm_statistics_project_select"
                            style="width: 100%"
                            data-placeholder="{{ project_placeholder }}">
                        {{# scm_statistics_selected_project }}
                            <option value="{{ scm_statistics_selected_project }}">{{ scm_statistics_selected_project }}</option>
                        {{/ scm_statistics_selected_project }}
                    </select>
                    <p class="tlp-text-info"><i class="far fa-life-ring"></i> {{ project_help }}</p>
                </div>
            </div>
        </div>
        <label class="tlp-label tlp-radio">
            <input type="radio" name="data-export-content" value="siteadmin-export-data-usage-progress" data-test="usage-progress" /> {{ usage_progress_label }}
        </label>

        <div class="tlp-pane-section-submit">
            <button type="submit" class="tlp-button-primary" name="export" data-test="scm-export-button">
                <i class="fa-solid fa-download tlp-button-icon"></i> {{ csv_export_button }}
            </button>
        </div>
    </form>
{{/ scm_statistics_presenter }}
