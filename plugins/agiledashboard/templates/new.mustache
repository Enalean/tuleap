<form method="post" action="/plugins/agiledashboard/?group_id={{group_id}}&amp;func=create">
    <p>
        <label for="planning_name">Name</label>
        <input type="text" name="planning_name"/>
    </p>
    <p>
        This planning allows assignment of
        <select multiple="multiple" name="planning_backlog_ids[]" style="vertical-align: top;">
            {{#getAvailableTrackers}}
                <option value="{{getId}}">{{getName}}</option>
            {{/getAvailableTrackers}}
        </select>
        to
        <select name="planning_release_id">
            <option value=""/>
            {{#getAvailableTrackers}}
                <option value="{{getId}}">{{getName}}</option>
            {{/getAvailableTrackers}}
        </select>
    </p>
    <p>
        <input type="submit" value="Create"/>
    </p>
</form>