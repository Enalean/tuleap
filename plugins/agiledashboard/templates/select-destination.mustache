<div>
    {{> planning/planning-tracker-actions}}
    <form action="?" method="GET">
        <input type="hidden" name="group_id" value="{{group_id}}" />
        <input type="hidden" name="action" value="show" />
        <input type="hidden" name="planning_id" value="{{planning_id}}" />
        <select class="planning-artifact-chooser" name="aid">
            <option value="">{{pleaseChoose}}</option>
            {{#artifactsToSelect}}
            <option value="{{id}}" {{{selected}}}>{{{title}}}</option>
            {{/artifactsToSelect}}
            <option value="-1">{{createNewItemToPlan}}</option>
        </select>
        <noscript>
            <input type="submit" />
        </noscript>
    </form>
</div>
