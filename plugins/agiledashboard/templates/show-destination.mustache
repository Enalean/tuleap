{{#getPlannedArtifactsTree}}
    <div id="art-{{getId}}" class="release_planner card {{planningDroppableClass}}">
        {{#getCardPresenter}}
            {{> card-actions}}
        {{/getCardPresenter}}
        {{#canDisplayRemainingEffort}}
        <div>
            <span class="{{#isOverCapacity}}planning_overcapacity{{/isOverCapacity}}">
            {{{getRemainingEffort}}}
            </span>
        </div>
        {{/canDisplayRemainingEffort}}
        <p class="help">{{plannedArtifactsHelp}}</p>
        {{^canDrop}}
            {{{errorCantDrop}}}
        {{/canDrop}}
        {{#canDrop}}
            <div class="milestone-content">
                <div class="milestone-noitems" {{#hasChildren}}style="display:none;"{{/hasChildren}}>No items yet</div>
                {{^hasChildren}}
                    <ul class="cards" style="height:1.5em;"></ul>
                {{/hasChildren}}
                {{#hasChildren}}
                    {{> cards}}
                {{/hasChildren}}
                {{#hasSubMilestones}}
                    <hr />
                    <ul>
                        {{#getSubMilestones}}
                            <li><a href="{{getUri}}">{{getXRef}} - {{getTitle}}</a></li>
                        {{/getSubMilestones}}
                    </ul>
                {{/hasSubMilestones}}
            </div>
        {{/canDrop}}
    </div>
{{/getPlannedArtifactsTree}}
<div style="clear: both"></div>
