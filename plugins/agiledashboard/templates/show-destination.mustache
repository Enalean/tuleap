{{#plannedArtifactsTree}}
    <div id="art-{{getId}}" class="release_planner card {{planningDroppableClass}}">
        {{#getData}}
            {{> card-actions}}
        {{/getData}}
        {{> select-destination}}
        <hr />
        <p class="help">{{plannedArtifactsHelp}}</p>
        {{^canDrop}}
            {{{errorCantDrop}}}
        {{/canDrop}}
        {{#canDrop}}
            <div>
                {{^hasChildren}}
                    No items yet
                {{/hasChildren}}
                {{#hasChildren}}
                    {{> cards}}
                {{/hasChildren}}
                {{#hasHierarchyChildren}}
                    <hr />
                    <ul>
                        {{#getHierarchyChildren}}
                            <li><a href="{{getUri}}">{{getXRef}} - {{getTitle}}</a></li>
                        {{/getHierarchyChildren}}
                    </ul>
                {{/hasHierarchyChildren}}
            </div>
        {{/canDrop}}
    </div>
{{/plannedArtifactsTree}}
<div style="clear: both"></div>
