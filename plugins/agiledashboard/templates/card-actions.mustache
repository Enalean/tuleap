<div class="card-actions">
    <div class="dropdown" id="card-{{id}}-actions-menu">
        <a href="{{uri}}" data-target="#card-{{id}}-actions-menu" class="dropdown-toggle" data-toggle="dropdown">{{xref}} <span class="caret"></span></a>
        <ul class="dropdown-menu">
            <li>
                <a href="{{uri}}&{{planning_redirect_parameter}}">{{editLabel}}</a>
            </li>
            <li class="divider"></li>
            {{#allowedChildrenTypes}}
                {{#userCanView}}
                    <li>
                        <a href="/plugins/tracker/?tracker={{getId}}&func=new-artifact-link&id={{artifact_id}}&immediate=1&{{planning_redirect_parameter}}">{{getAddNewLabel}}</a>
                    </li>
                {{/userCanView}}
            {{/allowedChildrenTypes}}
        </ul>
    </div>
</div>

