<hr class="tlp-modal-separator">
<h2 class="tlp-modal-subtitle project-admin-ugroup-ldap-binding-modal-preview-title">{{ title }}</h2>

{{# nb_to_add }}
    <div class="tlp-alert-success project-admin-ugroup-ldap-binding-modal-preview-add-alert">
        {{ nb_to_add_text }}
        <ul class="project-admin-ugroup-ldap-binding-modal-preview-list">
            {{# users_to_add }}
                <li class="project-admin-ugroup-ldap-binding-modal-preview-list-item">
                    <div class="tlp-avatar-mini">
                        {{# has_avatar }}
                            <img src="{{ avatar_url }}" alt="{{ display_name }}" loading="lazy">
                        {{/ has_avatar }}
                    </div>
                    {{ display_name }}
                </li>
            {{/ users_to_add }}
        </ul>
    </div>
{{/ nb_to_add }}
{{# nb_to_remove }}
    <div class="tlp-alert-danger project-admin-ugroup-ldap-binding-modal-preview-remove-alert">
        {{ nb_to_remove_text }}
        <ul class="project-admin-ugroup-ldap-binding-modal-preview-list">
            {{# users_to_remove }}
                <li class="project-admin-ugroup-ldap-binding-modal-preview-list-item">
                    <div class="tlp-avatar-mini">
                        {{# has_avatar }}
                            <img src="{{ avatar_url }}" alt="{{ display_name }}" loading="lazy">
                        {{/ has_avatar }}
                    </div>
                    {{ display_name }}
                </li>
            {{/ users_to_remove }}
        </ul>
    </div>
{{/ nb_to_remove }}

{{# ldap_group_not_found }}
    <div class="tlp-alert-warning">
        {{ ldap_group_not_found_text }}
    </div>
{{/ ldap_group_not_found }}

{{^ ldap_group_not_found }}
    {{# nb_not_impacted }}
        <div class="tlp-alert-info">
            {{ nb_not_impacted_text }}
        </div>
    {{/ nb_not_impacted }}
    {{^ nb_to_add }}
        {{^ nb_to_remove }}
            {{^ nb_not_impacted }}
                <div class="tlp-alert-info">
                    {{ nothing_to_do_text }}
                </div>
            {{/ nb_not_impacted }}
        {{/ nb_to_remove }}
    {{/ nb_to_add}}
{{/ ldap_group_not_found }}
