
<div class="row">

<div class="span3">
    {{#has_results}}
    <p class="fts_resultcount">{{result_count}}</p>

    {{#has_facets}}
    <h3 class="frs_facet_main_title">Filter results:</h3>
    <h4 class="frs_facet_main_title">By projects</h4>
    <ul class="frs_facet">
    {{#facets}}
        <li><label><input type="checkbox" value="{{value}}" name="facets[{{name}}][]" {{checked}} onclick="this.form.submit()"/>{{label}} ({{count}})</label></li>
    {{/facets}}
    </ul>
        <h4 class="frs_facet_main_title">By nature</h4>
    <ul class="frs_facet">
    {{#services_facets}}
        <li><label><input type="checkbox" value="{{value}}" name="facets[{{name}}][]" {{checked}} onclick="this.form.submit()"/>{{label}} ({{count}})</label></li>
    {{/services_facets}}
    </ul>
    {{/has_facets}}
    {{/has_results}}
</div>

<div class="span9">
    <input type="hidden" id="fts_size" value="10" />

    {{> search-results-docman}}

    {{#no_results}}
