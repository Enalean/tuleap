<section id="modal-logs-{{ jenkins_server_id }}"
    class="tlp-modal"
    role="dialog"
    aria-labelledby="hook-logs-modal-title-{{ jenkins_server_id }}"
>
    <div class="tlp-modal-header">
        <h1 class="tlp-modal-title" id="hook-logs-modal-title-{{ jenkins_server_id }}">
            {{# dgettext }} tuleap-hudson_git | Logs for %s | {{ jenkins_server_url }}{{/ dgettext }}
        </h1>

        <button class="tlp-modal-close" type="button" data-dismiss="modal" aria-label="{{# gettext }}Close{{/ gettext }}">
            <i class="fa-solid fa-xmark tlp-modal-close-icon" aria-hidden="true"></i>
        </button>
    </div>

    <div class="tlp-modal-body">
        <table class="tlp-table">
            <thead>
                <tr>
                    <th>{{# dgettext }} tuleap-hudson_git | Repository {{/ dgettext }}</th>
                    <th>{{# dgettext }} tuleap-hudson_git | Push date {{/ dgettext }}</th>
                    <th>{{# dgettext }} tuleap-hudson_git | Logs {{/ dgettext }}</th>
                </tr>
            </thead>
            <tbody>
                {{# logs_presenters }}
                    <tr>
                        <td class="hook-log-repository">
                            {{ repository_name }}
                        </td>
                        <td class="hook-log-date">
                            {{ push_date }}
                        </td>
                        <td>
                            <div class="tlp-property">
                                <label class="tlp-label">{{# dgettext }} tuleap-hudson_git | Git plugin triggered jobs{{/ dgettext }}</label>
                                {{# triggered_jobs }}
                                    <p><a href="{{ . }}">{{ . }}</a></p>
                                {{/ triggered_jobs }}
                                {{^ triggered_jobs }}
                                    <p class="tlp-property-empty">{{# dgettext }} tuleap-hudson_git | No triggered jobs {{/ dgettext }}</p>
                                {{/ triggered_jobs }}
                            </div>

                            {{# status_code }}
                            <div class="tlp-property">
                                <label class="tlp-label">{{# dgettext }} tuleap-hudson_git | Branch source plugin{{/ dgettext }}</label>
                                <p>{{ . }}</p>
                            </div>
                            {{/ status_code }}
                        </td>
                    </tr>
                {{/ logs_presenters }}
                {{^ logs_presenters }}
                    <tr>
                        <td class="tlp-table-cell-empty" colspan="3">
                            {{# dgettext }} tuleap-hudson_git | No logs yet{{/ dgettext }}
                        </td>
                    </tr>
                {{/ logs_presenters }}
            </tbody>
        </table>
    </div>

    <div class="tlp-modal-footer">
        <button type="button" class="tlp-button-primary tlp-button-outline tlp-modal-action" data-dismiss="modal">
            {{# dgettext }} tuleap-hudson_git | Close {{/ dgettext }}
        </button>
    </div>
</section>
