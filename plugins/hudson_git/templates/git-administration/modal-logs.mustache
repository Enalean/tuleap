<div id="modal-logs-{{ jenkins_server_id }}"
    class="modal hide fade hook-logs-modal"
    tabindex="-1"
    role="dialog"
    aria-labelledby="hook-logs-modal-title-{{ jenkins_server_id }}"
    aria-hidden="true"
>
    <div class="modal-header">
        <a role="button" class="close" data-dismiss="modal">Ã—</a>
        <h3 id="hook-logs-modal-title-{{ jenkins_server_id }}">{{# dgettext }} tuleap-hudson_git | Logs for %s | {{ jenkins_server_url }}{{/ dgettext }}</h3>
    </div>

    <div class="modal-body">
        <table class="table hook-logs">
            <thead>
                <tr>
                    <th>{{# dgettext }} tuleap-hudson_git | Repository {{/ dgettext }}</th>
                    <th>{{# dgettext }} tuleap-hudson_git | Push date {{/ dgettext }}</th>
                    <th>{{# dgettext }} tuleap-hudson_git | Logs {{/ dgettext }}</th>
                </tr>
            </thead>
            <tbody>
                {{# logs_presenters }}
                    <tr>
                        <td class="hook-log-repository">
                            {{ repository_name }}
                        </td>
                        <td class="hook-log-date">
                            {{ push_date }}
                        </td>
                        <td>
                            <div class="hook-log-triggered-jobs">
                                <h4>{{# dgettext }} tuleap-hudson_git | Git plugin triggered jobs: {{/ dgettext }}</h4>
                                {{# triggered_jobs }}
                                    <a href="{{ . }}">{{ . }}</a><br/>
                                {{/ triggered_jobs }}
                                {{^ triggered_jobs }}
                                    {{# dgettext }} tuleap-hudson_git | No triggered jobs {{/ dgettext }}
                                {{/ triggered_jobs }}
                            </div>
                            {{# status_code }}
                                <div class="hook-log-branch-source-status">
                                    <h4>{{# dgettext }} tuleap-hudson_git | Branch source plugin: {{/ dgettext }}</h4>
                                    {{ . }}
                                </div>
                            {{/ status_code }}
                        </td>
                    </tr>
                {{/ logs_presenters }}
                {{^ logs_presenters }}
                    <tr>
                        <td class="table-cell-empty" colspan="3">
                            {{# dgettext }} tuleap-hudson_git | No logs yet{{/ dgettext }}
                        </td>
                    </tr>
                {{/ logs_presenters }}
            </tbody>
        </table>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn" data-dismiss="modal" aria-hidden="true">{{# dgettext }} tuleap-hudson_git | Close {{/ dgettext }}</button>
    </div>
</div>
