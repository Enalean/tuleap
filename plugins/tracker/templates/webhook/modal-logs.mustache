<div id="modal-logs-{{ webhook_id }}"
     class="tlp-modal"
     role="dialog"
     aria-labelledby="modal-logs-{{ webhook_id }}-title"
>
    <div class="tlp-modal-header">
        <h1 class="tlp-modal-title" id="modal-logs-{{ webhook_id }}-title">
            {{# dgettext }} tuleap-tracker | Logs for %s | {{ webhook_url }} {{/ dgettext }}
        </h1>
        <button type="button" class="tlp-modal-close" data-dismiss="modal" aria-label="{{# gettext }}Close{{/ gettext }}">
            <i class="fa-solid fa-xmark tlp-modal-close-icon" aria-hidden="true"></i>
        </button>
    </div>

    <div class="tlp-modal-body">
        <table class="tlp-table">
            <thead>
                <tr>
                    <th>{{# dgettext }} tuleap-tracker | Time {{/ dgettext }}</th>
                    <th>{{# dgettext }} tuleap-tracker | Return type {{/ dgettext }}</th>
                </tr>
            </thead>
            <tbody>
                {{# all_log }}
                    <tr>
                       <td class="tracker-admin-webhooks-modal-logs-time">{{ time }}</td>
                       <td>
                           {{# status_ok }}
                            <span class="tlp-text-success" title="{{ status_message }}">
                               <i class="fa-solid fa-check-circle" aria-hidden="true"></i> {{ status_message }}
                            </span>
                           {{/ status_ok }}

                           {{^ status_ok }}
                            <span class="tlp-text-warning" title="{{ status_message }}">
                                <i class="fa-solid fa-triangle-exclamation" aria-hidden="true"></i> {{ status_message }}
                            </span>
                           {{/ status_ok }}
                       </td>
                    </tr>
                {{/ all_log }}
                {{^ all_log }}
                    <tr>
                        <td class="tlp-table-cell-empty" colspan="2">
                        {{# dgettext }} tuleap-tracker | No logs yet {{/ dgettext }}
                        </td>
                    </tr>
                {{/ all_log }}
            </tbody>
        </table>
    </div>

    <div class="tlp-modal-footer">
        <button type="button" class="tlp-button-primary tlp-modal-action" data-dismiss="modal">
            {{# dgettext }} tuleap-tracker | Close {{/ dgettext }}
        </button>
    </div>
</div>
