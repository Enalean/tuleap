<form id="modal-create-webhook"
    role="dialog"
    aria-labelledby="modal-create-webhook-title"
    method="post"
    action="/plugins/tracker/webhooks/create"
    class="tlp-modal"
>
    <div class="tlp-modal-header">
        <h1 class="tlp-modal-title" id="modal-create-webhook-title">{{# dgettext }} tuleap-tracker | Add webhook {{/ dgettext }}</h1>
        <button type="button" class="tlp-modal-close" data-dismiss="modal" aria-label="{{# gettext }}Close{{/ gettext }}">
            <i class="fa-solid fa-xmark tlp-modal-close-icon" aria-hidden="true"></i>
        </button>
    </div>

    {{# csrf_token }}
        {{> csrf_token_input }}
    {{/ csrf_token }}
    <input type="hidden" name="tracker_id" value="{{ tracker_id }}" />

    <div class="tlp-modal-body">
        <p>{{# dgettext }} tuleap-tracker | Add a target which will be called everytime an artifact is created or updated. The URL will be called using HTTP POST method. {{/ dgettext }}</p>
        <div class="tlp-form-element">
            <label for="webhook-url" class="tlp-label">
                {{# dgettext }} tuleap-tracker | Target URL {{/ dgettext }}
                <i class="fa-solid fa-asterisk" aria-hidden="true"></i>
            </label>
            <input
                type="url"
                id="webhook-url"
                name="webhook_url"
                value=""
                placeholder="https://example.com/webhook"
                required pattern="https?://.+"
                class="tlp-input"
            />
        </div>
    </div>

    <div class="tlp-modal-footer">
        <button type="button" class="tlp-button-primary tlp-button-outline tlp-modal-action" data-dismiss="modal">
            {{# dgettext }} tuleap-tracker | Cancel {{/ dgettext }}
        </button>
        <button type="submit" class="tlp-button-primary tlp-modal-action">
            <i class="fa-solid fa-plus tlp-button-icon" aria-hidden="true"></i>
            {{# dgettext }} tuleap-tracker | Add webhook {{/ dgettext }}
        </button>
    </div>
</form>
