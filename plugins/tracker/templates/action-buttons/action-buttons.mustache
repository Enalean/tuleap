{{# has_at_least_one_action }}
    <div class="tlp-dropdown artifact-header-action-dropdown">
        <button type="button" class="tlp-button-primary" id="dropdown-tracker-artifact-actions" data-test="tracker-artifact-actions">
            <i class="fa-solid fa-bars" aria-hidden="true"
               id="tracker-artifact-action-icon"
            ></i> {{# dgettext }} tuleap-tracker | Actions {{/ dgettext }}
            <i class="fa-solid fa-caret-down tlp-button-icon" aria-hidden="true"></i>
        </button>
        <div role="menu" class="tlp-dropdown-menu artifact-header-action-dropdown-menu" id="dropdown-menu-tracker-artifact-actions">
            {{> action-buttons/original-email }}
            {{> action-buttons/copy-artifact }}
            {{> action-buttons/move-artifact-button }}

            {{# additional_buttons_divider }}
                <span class="tlp-dropdown-menu-separator" role="separator"></span>
            {{/ additional_buttons_divider }}

            {{# additional_buttons }}
                {{> action-buttons/additional-action-button }}
            {{/ additional_buttons }}

            {{# notifications_divider }}
                <span class="tlp-dropdown-menu-separator" role="separator"></span>
            {{/ notifications_divider }}
            {{> action-buttons/mail-notifications }}

            {{# can_delete }}
                {{# delete_divider }}
                    <span class="tlp-dropdown-menu-separator" role="separator"></span>
                {{/ delete_divider }}
                <button type="button"
                        role="menuitem"
                        class="tlp-dropdown-menu-item tlp-dropdown-menu-item-danger"
                        id="tracker-action-button-delete"
                        data-test="tracker-action-button-delete"
                        {{# is_deletion_disabled }}
                            disabled
                            title="{{ deletion_disabled_reason }}"
                        {{/ is_deletion_disabled }}
                >
                    <i class="tlp-dropdown-menu-item-icon fa-fw fa-regular fa-trash-alt" id="tracker-action-button-delete-icon" aria-hidden="true"></i>
                    {{# gettext }}Delete{{/ gettext }}
                </button>
            {{/ can_delete }}
        </div>
    </div>
     <div id="tracker-modal-actions"></div>

    {{# should_load_modal }}
        {{> action-buttons/move-artifact-modal }}
    {{/ should_load_modal }}
    {{# can_delete }}
        {{> action-buttons/delete-artifact-modal }}
    {{/ can_delete }}
{{/ has_at_least_one_action }}
