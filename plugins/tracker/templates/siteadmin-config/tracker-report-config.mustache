<div class="tlp-framed-vertically">

    {{> siteadmin-config/site-admin-navbar }}

    <div class="tlp-framed-horizontally">

        <section class="tlp-pane">
            <div class="tlp-pane-container">
                <div class="tlp-pane-header">
                    <h1 class="tlp-pane-title"><i class="far fa-file-alt tlp-pane-title-icon"></i> {{ report_config_pane_title }}</h1>
                </div>
                <section class="tlp-pane-section">
                    <p>{{ report_config_desc }}</p>

                    <form method="POST" action="">
                        <input type="hidden" name="action" value="update-report-config" />
                        {{# csrf_token }}
                            {{> csrf_token_input }}
                        {{/ csrf_token }}

                        <div class="tlp-form-element">
                            <label class="tlp-label" for="input-query-limit">{{ query_limit_label }}</label>
                            <input type="number"
                                   id="input-query-limit"
                                   class="tlp-input"
                                   name="query_limit"
                                   placeholder="{{ default_query_limit }}"
                                   size="5"
                                   value="{{# query_limit }}{{ query_limit }}{{/ query_limit }}"
                                   min="1"
                                   max="80"
                            />
                        </div>

                        <div class="tlp-pane-section-submit">
                            <button type="submit" class="tlp-button-primary">
                                <i class="fa-solid fa-save tlp-button-icon" aria-hidden="true"></i>
                                {{# dgettext }}tuleap-tracker | Save configuration{{/ dgettext }}
                            </button>
                        </div>
                    </form>
                </section>
            </div>
        </section>
    </div>
</div>
