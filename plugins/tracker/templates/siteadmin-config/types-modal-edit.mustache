<form action="" id="siteadmin-config-types-modal-edit-{{ shortname }}-form" method="POST">
    <div id="siteadmin-config-types-modal-edit-{{ shortname }}"
        class="tlp-modal siteadmin-config-types-modal-edit"
        role="dialog"
        aria-labelledby="siteadmin-config-types-modal-edit-{{ shortname }}-label"
    >
        <div class="tlp-modal-header">
            <h1 class="tlp-modal-title" id="siteadmin-config-types-modal-edit-{{ shortname }}-label">
                {{ edit_type }}
            </h1>
            <button class="tlp-modal-close" type="button" data-dismiss="modal" aria-label="Close">
                <i class="fas fa-times tlp-modal-close-icon" aria-hidden="true"></i>
            </button>
        </div>
        <div class="tlp-modal-body">
            <input type="hidden" name="action" value="edit-type" />

            {{# csrf_token }}
                {{> csrf_token_input }}
            {{/ csrf_token }}

            <div class="tlp-property">
                <label class="tlp-label">{{ shortname_label }}</label>
                <p>{{ shortname }}</p>
            </div>

            <div class="tlp-form-element">
                <label class="tlp-label" for="siteadmin-config-types-modal-edit-{{ shortname }}-forward">{{ forward_label_label }} <i class="fa-solid fa-asterisk"></i></label>
                <input type="text"
                    id="siteadmin-config-types-modal-edit-{{ shortname }}-forward"
                    class="tlp-input"
                    name="forward_label"
                    placeholder="{{ forward_label_placeholder }}"
                    value="{{ forward_label }}"
                    required
                >
                <p class="tlp-text-info">{{ forward_label_help }}</p>
            </div>

            <div class="tlp-form-element">
                <label class="tlp-label" for="siteadmin-config-types-modal-edit-{{ shortname }}-reverse">{{ reverse_label_label }} <i class="fa-solid fa-asterisk"></i></label>
                <input type="text"
                    id="siteadmin-config-types-modal-edit-{{ shortname }}-reverse"
                    class="tlp-input"
                    name="reverse_label"
                    placeholder="{{ reverse_label_placeholder }}"
                    value="{{ reverse_label }}"
                    required
                >
                <p class="tlp-text-info">{{ reverse_label_help }}</p>
            </div>
        </div>
        <div class="tlp-modal-footer">
            <input type="hidden" name="shortname" value="{{ shortname }}">
            <button type="button" class="tlp-button-primary tlp-button-outline tlp-modal-action" data-dismiss="modal">{{ btn_close }}</button>
            <button type="submit" form="siteadmin-config-types-modal-edit-{{ shortname }}-form" class="tlp-button-primary tlp-modal-action">
                <i class="fa-solid fa-save tlp-button-icon"></i> {{ btn_submit }}
            </button>
        </div>
    </div>
</form>
