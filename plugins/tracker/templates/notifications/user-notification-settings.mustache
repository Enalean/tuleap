<h1 class="tlp-framed-horizontally user-notifications-title">{{# dgettext }} tuleap-tracker | Email Notifications Settings {{/ dgettext }}</h1>
<div class="tlp-framed">
    <section class="tlp-pane">
        <div class="tlp-pane-container">
            <div class="tlp-pane-header">
                <h1 class="tlp-pane-title">{{# dgettext }} tuleap-tracker | Notification settings{{/ dgettext }}</h1>
            </div>
            <section class="tlp-pane-section">
                {{# are_global_notifications_suspended }}
                    <p class="tlp-alert-info">
                        {{# dgettext }}
                            tuleap-tracker |
                            You can't choose your notifications level for this tracker because tracker administrator has suspended all notifications.
                        {{/ dgettext }}
                    </p>
                {{/ are_global_notifications_suspended }}
                {{^ are_global_notifications_suspended }}
                    <p class="tlp-text-info">{{# dgettext }} tuleap-tracker | Your %1$suser preferences%2$s can change the notifications you will receive. | <a href="/account/notifications"> | </a> {{/ dgettext }}</p>
                    <p>
                        {{# dgettext }}tuleap-tracker | You can choose the notification mode you wish for this tracker. {{/ dgettext }}
                    </p>
                    <form method="post">
                        {{# csrf_token }}
                            {{> csrf_token_input }}
                        {{/ csrf_token }}
                        <div class="tlp-form-element">
                            <label class="tlp-label tlp-radio" for="no-notification-mode">
                                <input type="radio" id="no-notification-mode" name="notification-mode"
                                       value="no-notification"
                                    {{# is_in_no_notification_at_all_mode }}
                                       checked {{/ is_in_no_notification_at_all_mode }}>
                                {{# dgettext }} tuleap-tracker | No notifications at all {{/ dgettext }}
                            </label>
                            <label class="tlp-label tlp-radio" for="no-global-notification-mode">
                                <input type="radio" id="no-global-notification-mode" name="notification-mode"
                                       value="no-global-notification"
                                    {{# is_in_no_global_notification_mode }}
                                       checked {{/ is_in_no_global_notification_mode }}>
                                {{no_global_notification_label}}
                            </label>
                            <label class="tlp-label tlp-radio" for="notify-me-on-create-mode">
                                <input type="radio" id="notify-me-on-create-mode" name="notification-mode"
                                       value="notify-me-on-create"
                                    {{# is_in_notify_on_artifact_creation_mode }}
                                       checked {{/ is_in_notify_on_artifact_creation_mode }}>
                                {{# dgettext }} tuleap-tracker | Notify me when artifacts are created {{/ dgettext }}
                            </label>
                            <label class="tlp-label tlp-radio" for="notify-me-every-change-mode">
                                <input type="radio" id="notify-me-every-change-mode" name="notification-mode"
                                       value="notify-me-every-change"
                                    {{# is_in_notify_on_every_change_mode }}
                                       checked {{/ is_in_notify_on_every_change_mode }}>
                                {{# dgettext }} tuleap-tracker | Notify me on every change {{/ dgettext }}
                            </label>
                            <label class="tlp-label tlp-radio" for="notify-me-every-status-mode">
                                <input type="radio" id="notify-me-every-status-mode" name="notification-mode"
                                       value="notify-me-status-change"
                                    {{# is_in_notify_on_status_change_mode }}
                                       checked {{/ is_in_notify_on_status_change_mode }}>
                                {{# dgettext }} tuleap-tracker | Notify me on status change {{/ dgettext }}
                            </label>
                        </div>
                        <div class="tlp-form-element">
                            <input class="tlp-button-primary"
                                   value="{{# dgettext }} tuleap-tracker | Submit Changes {{/ dgettext }}"
                                   type="submit">
                        </div>
                    </form>
                {{/ are_global_notifications_suspended }}
            </section>
        </div>
    </section>
</div>
