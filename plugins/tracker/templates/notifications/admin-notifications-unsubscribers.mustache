<div class="tlp-framed-horizontally">
    <div class="tlp-pane">
        <div class="tlp-pane-container">
            <div class="tlp-pane-header">
                <h1 class="tlp-pane-title">{{# dgettext }}
                    tuleap-tracker | Users having unsubscribed from the notifications {{/ dgettext }}</h1>
            </div>
            <div class="tlp-pane-section">
                <div class="tlp-table-actions">
                    <button type="button" class="tlp-button-primary" id="tracker-unsubscribe-add-button"
                            data-target-modal-id="tracker-unsubscribe-add-modal" data-test="unsuscribe-notifification">
                        <i class="fa-solid fa-plus" aria-hidden="true"></i>
                        {{# dgettext }} tuleap-tracker | Unsubscribe a user {{/ dgettext }}
                    </button>
                </div>
                <table class="tlp-table">
                    <thead>
                    <tr>
                        <th>{{# dgettext }} tuleap-tracker | Unsubscribers {{/ dgettext }}</th>
                        <th></th>
                    </tr>
                    </thead>
                    {{# unsubscribers }}
                        <tr>
                            <td>
                        <span class="tracker-notification-email-list-entry">
                            <div class="tlp-avatar-mini">
                                <img src="{{ avatar_url }}" loading="lazy" aria-hidden="true"/>
                            </div>
                            {{ display_name }}
                        </span>
                            </td>
                            <td class="tracker-unsubscriber-actions">
                                <a
                                    class="tlp-table-cell-actions-button tlp-button-small tlp-button-danger tlp-button-outline tracker-notification-modal-button-trigger"
                                    data-target-modal-id="tracker-unsubscriber-delete-{{ user_id }}-modal"
                                >
                                    <i class="fa-regular fa-trash-alt" aria-hidden="true"></i>
                                    {{# dgettext }} tuleap-tracker | Delete  {{/ dgettext }}
                                </a>
                            </td>
                        </tr>
                        {{> unsubscriber-delete-modal}}
                    {{/ unsubscribers }}
                    {{^ unsubscribers }}
                        <tr>
                            <td class="tlp-table-cell-empty" colspan="2">
                                {{# dgettext }} tuleap-tracker | No users have unsubscribed. {{/ dgettext }}
                            </td>
                        </tr>
                    {{/ unsubscribers }}
                </table>
            </div>
        </div>
    </div>
</div>

{{> unsubscriber-add-modal}}
