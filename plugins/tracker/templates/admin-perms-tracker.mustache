<div class="tlp-framed">
    <section class="tlp-pane">
        <div class="tlp-pane-container">
            <div class="tlp-pane-header">
                <h1 class="tlp-pane-title">
                    {{title}}
                </h1>
            </div>
            <form action="{{form_url}}" method="post" class="tlp-pane-section">
                <p>{{intro}}</p>
                <p>{{{create_modify_ugroups}}}</p>
                <table class="tlp-table">
                    <thead>
                    <th>{{ugroup_title}}</th>
                    <th>{{permissions_title}}</th>
                    </thead>

                    <tbody>
                    {{#ugroup_permissions}}
                        <tr>
                            <td>
                                {{#has_link}}
                                    <a href="{{url}}">{{name}}</a>
                                {{/has_link}}
                                {{^has_link}}
                                    {{name}}
                                {{/has_link}}
                            </td>
                            <td>
                                <select class="tlp-select tlp-select-adjusted" name="{{permission_name}}" data-test="{{ permission_name }}">
                                    {{#permissions_list}}
                                        <option value="{{value}}" {{selected}}>{{label}}</option>
                                    {{/permissions_list}}
                                </select>
                            </td>
                        </tr>
                    {{/ugroup_permissions}}
                    </tbody>
                </table>
                <div class="tlp-pane-section-submit">
                    <input type="submit" class="tlp-button-primary" name="update" value="{{submit_permissions}}" data-test="tracker-permission-submit"/>
                </div>
            </form>
        </div>
    </section>
</div>
