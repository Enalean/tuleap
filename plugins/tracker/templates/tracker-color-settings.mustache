<div class="tracker_settings_colors">
    {{# colors}}
        <span class="fa-stack tracker_color_selector">
            <i class="fa fa-square fa-stack-2x tracker_color_selector_container {{ color }}" data-color={{ color }}></i>
            <i class="fa fa-check fa-stack-1x {{# selected }} selected {{/ selected }}"></i>
        </span>
    {{/ colors}}

    <input type="hidden" name="tracker_color" value="{{ tracker_color }}"/>

    <span class="tracker_color_preview">
        <span class="tracker_color_preview_label">
        {{ preview_label }}
        </span>
    <span class="{{ tracker_color }} xref-in-title"> {{ tracker_shortname }} #123 </span>
    </span>
</div>
