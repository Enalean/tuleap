<section class="tlp-popover" id="tracker-statistics-popover-{{ tracker_id }}">
    <div class="tlp-popover-arrow"></div>
    <div class="tlp-popover-body">
        <div class="tlp-property">
            <label class="tlp-label">{{# dgettext }} tuleap-tracker | Tracker id {{/ dgettext }}</label>
            #{{ tracker_id }}
        </div>
        {{# can_display_nb_artifacts }}
            <div class="tlp-property">
                <label class="tlp-label">{{# dgettext }} tuleap-tracker | Number of open artifacts {{/ dgettext }}</label>
                {{ nb_open_artifacts }}
            </div>
        {{/ can_display_nb_artifacts }}

        <div class="tlp-property">
            <label class="tlp-label">{{# dgettext }} tuleap-tracker | Total number of artifacts {{/ dgettext }}</label>
            {{ total_nb_artifacts }}
        </div>

        {{# has_last_creation_and_update_dates }}
            {{# tlp_relative_date_last_update_purified }}
                <div class="tlp-property">
                    <label class="tlp-label">{{# dgettext }} tuleap-tracker | Last update {{/ dgettext }}</label>
                    {{{ tlp_relative_date_last_update_purified }}}
                </div>
            {{/ tlp_relative_date_last_update_purified }}

            {{# tlp_relative_date_last_update_purified }}
                <div class="tlp-property">
                    <label class="tlp-label">{{# dgettext }} tuleap-tracker | Last artifact created {{/ dgettext }}</label>
                    {{{ tlp_relative_date_last_creation_purified }}}
                </div>
            {{/ tlp_relative_date_last_update_purified }}
        {{/ has_last_creation_and_update_dates }}
    </div>
</section>