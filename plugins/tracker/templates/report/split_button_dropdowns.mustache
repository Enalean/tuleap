<div class="btn-group" id="{{ id }}">
    <form method="post" action="{{ default_option.url }}">
        {{# csrf_token }}
            {{> csrf_token_input }}
        {{/ csrf_token }}
        <button type="submit"
           class="btn {{ btn_class }}"
           id="{{ default_option.id }}"
           data-test="{{ id }}"
           data-toggle="{{ default_option.data_toggle }}">{{default_option.label}}</button>
    </form>
    {{# has_options }}
        <button class="btn dropdown-toggle {{ btn_class }}" data-toggle="dropdown">
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
            {{# options }}
            <li><a href="{{ url }}" id="{{ id }}" data-test="{{ id }}" data-toggle="{{ data_toggle }}">{{ label }}</a></li>
            {{/ options }}
        </ul>
    {{/ has_options }}
</div>
