{{# has_user_dashboard }}
    {{# has_only_one_user_dashboard }}
        <div class="btn-group">
            {{# user_dashboards_presenter }}
                <form method="post" action="/widgets/" class="tracker-add-to-dashboard-form-button">
                    {{# my_dashboard_form_settings }}
                        <input type="hidden" name="{{ name }}" value="{{ value }}">
                    {{/ my_dashboard_form_settings }}
                    <input type="hidden" name="dashboard-id" value="{{ getId }}" />
                    <button class="btn btn-mini" type="submit" data-test="add-to-my-dashboard">
                        <i class="fas fa-tachometer-alt"></i> {{ my_dashboard }}
                    </button>
                </form>
            {{/ user_dashboards_presenter }}
        </div>
    {{/ has_only_one_user_dashboard }}
    {{^ has_only_one_user_dashboard }}
        <div class="btn-group">
            <a class="btn btn-mini dropdown-toggle" data-toggle="dropdown">
                <i class="fas fa-tachometer-alt"></i>
                {{ my_dashboard }}
                <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
                {{# user_dashboards_presenter }}
                    <li>
                        <form method="post" action="/widgets/">
                            {{# my_dashboard_form_settings }}
                                <input type="hidden" name="{{ name }}" value="{{ value }}">
                            {{/ my_dashboard_form_settings }}
                            <input type="hidden" name="dashboard-id" value="{{ getId }}" />
                            <button class="btn-link" type="submit" data-test="add-to-my-dashboard">{{ getName }}</button>
                        </form>
                    </li>
                {{/ user_dashboards_presenter }}
            </ul>
        </div>
    {{/ has_only_one_user_dashboard }}
{{/ has_user_dashboard }}
