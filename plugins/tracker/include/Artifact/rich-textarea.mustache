<textarea
        id="{{ id }}"
        wrap="soft"
        rows="{{ rows }}"
        cols="{{ cols }}"
        name="{{ name }}"
        maxlength="{{ maxlength }}"
        {{# is_required }}required{{/ is_required }}
        {{# data_attributes }}
            data-{{ name }}="{{ value }}"
        {{/ data_attributes }}
        data-test="{{ name }}"
        data-test-cypress="text-area"
        data-test-field-input
>{{ value }}</textarea>
<p class="text-info tracker-richtexteditor-help" id="{{ help_id }}"></p>
