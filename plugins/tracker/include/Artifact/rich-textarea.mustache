        id="{{ id }}"
        class="user-mention"
        wrap="soft"
        rows="{{ rows }}"
        cols="{{ cols }}"
        name="{{ name }}"
        maxlength="{{ maxlength }}"
        {{# is_required }}required{{/ is_required }}
        {{# data_attributes }}
            data-{{ name }}="{{ value }}"
