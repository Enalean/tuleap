<textarea
        id="{{ id }}"
        {{# allows_mentions }}class="user-mention"{{/ allows_mentions }}
        wrap="soft"
        rows="{{ rows }}"
        cols="{{ cols }}"
        name="{{ name }}"
        maxlength="{{ maxlength }}"
        {{# is_required }}required{{/ is_required }}
        {{# data_attributes }}
            data-{{ name }}="{{ value }}"
        {{/ data_attributes }}
        data-test="{{ name }}"
>{{ value }}</textarea>
<div class="muted tracker-richtexteditor-help" id="{{ help_id }}"></div>
{{# allows_mentions }}
    <p class="alert alert-info">
        <i class="fa-solid fa-exclamation-circle artifact-comment-at-mention-info-icon" aria-hidden="true"></i>
        {{# dgettext }}tuleap-tracker| When you use @ to mention someone, they will get an email notification.{{/ dgettext }}
    </p>
{{/ allows_mentions }}
